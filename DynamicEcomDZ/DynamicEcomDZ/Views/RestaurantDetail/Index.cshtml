    <script>
        /* Header offset */
        document.addEventListener("DOMContentLoaded", function () {
            const sub = document.getElementById("miniSubHeader");
            const hdr = document.querySelector(".main-header");
            if (sub && hdr) hdr.style.top = sub.offsetHeight + "px";
        });

        /* Slider animation reset */
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById('detailSlider')
                .addEventListener('slide.bs.carousel', function (e) {
                    const inc = e.relatedTarget;
                    if (!inc) return;
                    inc.querySelectorAll('.caption-badge,.caption-heading,.caption-desc,.caption-btn')
                        .forEach(el => {
                            el.style.animation = 'none';
                            el.style.opacity = '0';
                            void el.offsetWidth;
                            el.style.animation = '';
                        });
                });
        });

        /* Filter */
        document.addEventListener("DOMContentLoaded", function () {
            const si = document.getElementById("productSearch");
            const cf = document.getElementById("categoryFilter");

            function filterProducts() {
                const q = si.value.toLowerCase();
                const c = cf.value.toLowerCase();
                document.querySelectorAll(".product-section .row").forEach(row => {
                    const prev = row.previousElementSibling;
                    if (!prev) return;
                    const badge = prev.querySelector(".category-badge");
                    if (!badge) return;
                    const cat = badge.innerText.toLowerCase().replace(/^\W+/,'').trim();
                    const catOk = c === "all" || cat.includes(c);
                    let vis = false;
                    row.querySelectorAll(".product-card").forEach(card => {
                        const ok = card.dataset.productName.includes(q) && catOk;
                        card.style.display = ok ? "block" : "none";
                        if (ok) vis = true;
                    });
                    row.style.display = vis ? "flex" : "none";
                    prev.style.display = vis ? "flex" : "none";
                });
            }
            si.addEventListener("keyup", filterProducts);
            cf.addEventListener("change", filterProducts);
        });

        /* Cart */
        const productMaster = @Html.Raw(
                        System.Text.Json.JsonSerializer.Serialize(Model.Products.SelectMany(x => x.Value))
                );
        function getProductByCode(code) { return productMaster.find(p => p.ProductCode === code); }
        let cart = {};

        function changeQuantity(productCode, productName, delta) {
            const qtySpan = document.getElementById('qty-' + productCode);
            let newQty = Math.max(0, (parseInt(qtySpan.textContent) || 0) + delta);
            qtySpan.textContent = newQty;
            const product = getProductByCode(productCode);
            if (!product) return;
            if (delta > 0) flyToCart(productCode);
            if (newQty === 0) { delete cart[productCode]; }
            else {
                cart[productCode] = {
                    ProductCode: productCode, ProductName: product.ProductName,
                    Quantity: newQty, Rate: product.Prices,
                    DiscountAmount: product.DiscountAmount,
                    DeliveryCharges: product.DeliveryCharges,
                    image: product.ProductImage
                };
            }
            renderCart();
        }

        function flyToCart(productCode) {
            const img = document.getElementById('img-' + productCode);
            const cartIcon = document.getElementById('cartIcon');
            if (!img || !cartIcon) return;
            const ir = img.getBoundingClientRect(), cr = cartIcon.getBoundingClientRect();
            const fi = img.cloneNode(true);
            fi.classList.add("flying-img");
            document.body.appendChild(fi);
            Object.assign(fi.style, { left: ir.left+"px", top: ir.top+"px", width: ir.width+"px", height: ir.height+"px", position:'fixed', zIndex:9999, pointerEvents:'none', borderRadius:'10px' });
            requestAnimationFrame(() => { Object.assign(fi.style, { left: cr.left+"px", top: cr.top+"px", width:"24px", height:"24px", opacity:"0" }); });
            fi.addEventListener("transitionend", () => fi.remove());
        }

        function renderCart() {
            const container = document.getElementById("cartItemsContainer");
            const totalDiv  = document.getElementById("cartTotal");
            container.innerHTML = "";
            const items = Object.values(cart);

            if (items.length === 0) {
                container.innerHTML = `
                    <div class="cart-empty-state">
                        <div class="cart-empty-icon"><i class="bi bi-cart-x"></i></div>
                        <div class="cart-empty-text">Your cart is empty</div>
                        <div style="font-size:.76rem;color:rgba(26,26,46,.25);margin-top:4px;">Add items to get started</div>
                    </div>`;
                totalDiv.style.display = "none";
                updateCartCount(); return;
            }

            let tg = 0, td = 0, tq = 0, dc = 0;

            items.forEach(item => {
                if (dc === 0 && item.DeliveryCharges !== undefined) dc = Number(item.DeliveryCharges);
                const r = item.Quantity * item.Rate;
                const d = item.Quantity * item.DiscountAmount;
                const net = r - d;
                tg += r; td += d; tq += item.Quantity;

                const unitDisplay = item.DiscountAmount > 0
                    ? `<span style="color:var(--success);font-weight:700;">${fmt(item.Rate - item.DiscountAmount)}</span> <span style="text-decoration:line-through;color:var(--danger);opacity:.7;">${fmt(item.Rate)}</span>`
                    : `<span>${fmt(item.Rate)}</span>`;

                container.innerHTML += `
                    <div class="cart-item" id="cart-item-${item.ProductCode}">
                        <img src="/images/ProductRegistration/${item.image}" class="cart-item-img" />
                        <div class="cart-item-info">
                            <strong title="${item.ProductName}">${item.ProductName}</strong>
                            <div class="cart-item-price-unit">Unit: ${unitDisplay}</div>
                        </div>
                        <div class="cart-item-right">
                            <div class="cart-item-total">${fmt(net)}</div>
                            <div class="cart-qty-box">
                                <button class="cart-qty-btn minus"
                                        onclick="changeQuantity('${item.ProductCode}','${item.ProductName}',-1)">−</button>
                                <span class="cart-qty-num">${item.Quantity}</span>
                                <button class="cart-qty-btn"
                                        onclick="changeQuantity('${item.ProductCode}','${item.ProductName}',1)">+</button>
                            </div>
                        </div>
                    </div>`;
            });

            const np = (tg - td) + dc;
            totalDiv.style.display = "block";
            totalDiv.innerHTML = `
                <div class="cart-total-inner">
                    <div class="total-row">
                        <span class="lbl"><i class="bi bi-bag"></i> Total Items</span>
                        <span class="val">${tq}</span>
                    </div>
                    <div class="total-row">
                        <span class="lbl"><i class="bi bi-receipt"></i> Gross</span>
                        <span class="val">${fmt(tg)}</span>
                    </div>
                    ${td > 0 ? `
                    <div class="total-row discount">
                        <span class="lbl"><i class="bi bi-tag"></i> Discount</span>
                        <span class="val">− ${fmt(td)}</span>
                    </div>` : ''}
                    <div class="total-row">
                        <span class="lbl"><i class="bi bi-truck"></i> Delivery</span>
                        <span class="val">${dc === 0
                            ? `<span class="free-delivery">Free</span>`
                            : `<span class="delivery-fee">${fmt(dc)}</span>`}</span>
                    </div>
                    <div class="total-row net">
                        <span class="lbl">Payable</span>
                        <span class="val">${fmt(np)}</span>
                    </div>
                </div>`;
            updateCartCount();
        }

        function fmt(v) { return Number(v).toLocaleString('en-US',{minimumFractionDigits:0,maximumFractionDigits:0}); }
        function updateCartCount() {
            let c = 0; Object.values(cart).forEach(x => c += x.Quantity);
            document.getElementById('cartCount').textContent = c;
            const hBadge = document.getElementById('cartHeaderCount');
            if (c > 0) { hBadge.textContent = c + ' items'; hBadge.style.display = 'inline'; }
            else { hBadge.style.display = 'none'; }
        }
        function toggleCart() {
            document.getElementById('cartDrawer').classList.toggle('open');
            document.getElementById('cartBackdrop').classList.toggle('show');
        }

        function openCheckoutModal() {
            if (Object.values(cart).length === 0) {
                Swal.fire({ icon:'warning', title:'Cart Empty', text:'Please add items to cart first.' }); return;
            }
            document.getElementById('cartDrawer').classList.remove('open');
            document.getElementById('cartBackdrop').classList.remove('show');
            fetch('/Restaurant/CheckRestaurantValidation', {
                method:'POST', headers:{'Content-Type':'application/json'},
                body: JSON.stringify({ RestaurantId: @Model.RestaurantId })
            })
            .then(r => r.json())
            .then(data => {
                if (data.statusId === 0) {
                    document.querySelector('#closedModal .modal-title').innerText = 'Order Not Allowed';
                    document.querySelector('#closedModal .modal-body').innerHTML = data.message;
                    new bootstrap.Modal(document.getElementById('closedModal')).show(); return;
                }
                new bootstrap.Modal(document.getElementById('checkoutModal')).show();
            })
            .catch(() => Swal.fire('Error','Server validation failed.','error'));
        }

        function placeOrder() {
            const contactNo       = document.getElementById("ContactNo").value.trim();
            const customerName    = document.getElementById("CustomerName").value.trim();
            const customerAddress = document.getElementById("CustomerAddress").value.trim();
            const street          = document.getElementById("Street").value.trim();
            const floor           = document.getElementById("Floor").value.trim();
            const description     = document.getElementById("Description").value.trim();

            if (!contactNo || contactNo.length < 9) { Swal.fire("Validation","Contact No must be at least 9 digits.","error"); return; }
            if (!customerName || !customerAddress || !street || !floor) { Swal.fire("Validation","All fields are mandatory except Description.","error"); return; }

            Swal.fire({ title:"Confirm Order", text:"Are you sure you want to place this order?", icon:"question",
                showCancelButton:true, confirmButtonText:"Yes, Place Order", cancelButtonText:"No", reverseButtons:true, focusCancel:true
            }).then(result => {
                if (!result.isConfirmed) return;
                bootstrap.Modal.getInstance(document.getElementById('checkoutModal')).hide();

                setTimeout(() => {
                    Swal.fire({
                        title:"Please wait...",
                        html:`<div style="text-align:center"><img src="/Images/GIF/OrderPlaced.gif" class="success-gif mb-3" /><div style="font-weight:700;color:#1a1a2e;">Placing your order...</div></div>`,
                        allowOutsideClick:false, allowEscapeKey:false, showConfirmButton:false,
                        backdrop:'rgba(0,0,0,0.7)',
                        customClass:{ popup:'loading-swal-popup', container:'loading-swal-container' },
                        didOpen:() => {
                            const c = document.querySelector('.swal2-container');
                            c.setAttribute('tabindex','-1'); c.focus();
                            c.addEventListener('keydown', e => { if (e.key==='Tab') { e.preventDefault(); e.stopPropagation(); } });
                            document.querySelectorAll('#checkoutModal input,#checkoutModal textarea').forEach(i => i.disabled = true);
                        },
                        willClose:() => { document.querySelectorAll('#checkoutModal input,#checkoutModal textarea').forEach(i => i.disabled = false); }
                    });

                    $.ajax({
                        url:"/RestaurantDetail/PlaceOrder", type:"POST", contentType:"application/json",
                        data: JSON.stringify({ ContactNo:contactNo, CustomerName:customerName,
                            CustomerAddress:customerAddress, Street:street, Floor:floor,
                            Description:description, Items:Object.values(cart), RestaurantId: @Model.RestaurantId }),
                        success: function(res) {
                            Swal.close();
                            document.getElementById("orderSuccessMessage").innerHTML = res.message;
                            if (res.statusId === 0) { document.getElementById("orderStatusGif").src = "/Images/GIF/OrderFailed.gif"; }
                            else {
                                document.getElementById("orderStatusGif").src = "/Images/GIF/OrderSuccess.gif";
                                cart = {}; renderCart();
                                document.querySelectorAll('[id^="qty-"]').forEach(s => s.textContent = 0);
                                clearCheckoutModalFields();
                            }
                            new bootstrap.Modal(document.getElementById('orderSuccessModal')).show();
                        },
                        error: function() { Swal.close(); Swal.fire("Error","Something went wrong.","error"); }
                    });
                }, 300);
            });
        }

        function clearCheckoutModalFields(cc = true) {
            if (cc) document.getElementById("ContactNo").value = "";
            ["CustomerName","CustomerAddress","Street","Floor","Description"].forEach(id => document.getElementById(id).value = "");
        }

        document.getElementById("ContactNo").addEventListener("input", function () { this.value = this.value.replace(/\D/g,''); });
        document.getElementById("ContactNo").addEventListener("blur", function () {
            if (!this.value.trim()) return;
            fetch('/RestaurantDetail/CustomerExsistOrNo', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({ContactNo:this.value.trim()}) })
            .then(r => r.json())
            .then(data => {
                if (data.statusId === 1) {
                    document.getElementById("CustomerName").value    = data.customerName    || "";
                    document.getElementById("CustomerAddress").value = data.customerAddress || "";
                    document.getElementById("Street").value          = data.street          || "";
                    document.getElementById("Floor").value           = data.floor           || "";
                    document.getElementById("Description").value     = data.description     || "";
                } else { clearCheckoutModalFields(false); }
            }).catch(err => console.error(err));
        });

        document.addEventListener("DOMContentLoaded", function () {
            const inputs = document.querySelectorAll(".next-input");
            inputs.forEach((input, index) => {
                input.addEventListener("keydown", function (e) {
                    if (e.key === "Enter") {
                        e.preventDefault();
                        const next = inputs[index + 1];
                        next ? next.focus() : placeOrder();
                    }
                });
            });
        });
    </script>
</body>
