@model DynamicEcomDZ.Models.RestaurantDetailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.RestaurantName</title>
    <link rel="icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <style>
        :root {
            --red: #e84545;
            --red-dark: #c0392b;
            --dark: #1a1a2e;
            --success: #198754;
            --danger: #dc3545;
            --bg: #f6f7fb;
            --white: #ffffff;
            --muted: #6c757d;
            --radius: 14px;
            --tr: all .35s cubic-bezier(.4,0,.2,1);
            --shadow-sm: 0 2px 12px rgba(0,0,0,.08);
            --shadow-lg: 0 20px 60px rgba(0,0,0,.18);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--bg);
            font-family: 'Poppins',sans-serif;
            color: var(--dark);
        }

        /* ===== MINI SUB-HEADER ===== */
        .mini-sub-header {
            background: var(--dark);
            color: #fff;
            font-size: .82rem;
            font-weight: 500;
            position: sticky;
            top: 0;
            z-index: 1060;
            border-bottom: 1px solid rgba(255,255,255,.06);
        }

        .sub-header-inner {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 7px 0;
        }

            .sub-header-inner i {
                color: var(--red);
            }

        /* ===== MAIN HEADER — Dark (Index style) ===== */
        .main-header {
            background: var(--dark);
            box-shadow: 0 2px 20px rgba(0,0,0,.35);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .main-header .header-inner {
                width: 92%;
                max-width: 1200px;
                margin: auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
                height: 68px;
            }

        .header-logo img {
            height: 46px;
            width: auto;
            object-fit: contain;
            transition: var(--tr);
        }

            .header-logo img:hover {
                transform: scale(1.04);
            }

        /* Cart icon */
        .cart-icon {
            position: relative;
            font-size: 24px;
            cursor: pointer;
            color: #fff;
            width: 46px;
            height: 46px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(255,255,255,.10);
            transition: var(--tr);
        }

            .cart-icon:hover {
                background: var(--red);
                transform: scale(1.08);
            }

        .cart-count {
            position: absolute;
            top: 2px;
            right: 2px;
            background: var(--red);
            color: #fff;
            font-size: 9px;
            font-weight: 800;
            padding: 2px 6px;
            border-radius: 20px;
            min-width: 18px;
            text-align: center;
            line-height: 14px;
            border: 2px solid var(--dark);
            transition: transform .2s ease;
        }

        .cart-icon:hover .cart-count {
            transform: scale(1.15);
        }

        /* ===== SLIDER ===== */
        #detailSlider {
            width: 100%;
            overflow: hidden;
            position: relative;
        }

            #detailSlider .carousel-inner img {
                width: 100%;
                height: 500px;
                object-fit: cover;
                filter: brightness(50%);
                transition: filter .5s ease, transform 6s ease;
            }

            #detailSlider .carousel-item.active img {
                transform: scale(1.05);
            }

            #detailSlider:hover .carousel-inner img {
                filter: brightness(60%);
            }

            /* Gradient overlay */
            #detailSlider .carousel-item::after {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(120deg, rgba(26,26,46,.80) 0%, rgba(26,26,46,.40) 45%, rgba(0,0,0,.10) 100%);
                z-index: 1;
            }

            /* Caption */
            #detailSlider .carousel-caption {
                position: absolute;
                top: 50%;
                left: 7%;
                right: auto;
                transform: translateY(-50%);
                z-index: 10;
                text-align: left;
                max-width: 520px;
                padding: 0;
            }

        /* Animated elements */
        .caption-badge {
            display: inline-flex;
            align-items: center;
            gap: 7px;
            background: var(--red);
            color: #fff;
            font-size: .7rem;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
            padding: 5px 16px;
            border-radius: 30px;
            margin-bottom: 18px;
            opacity: 0;
        }

        .caption-heading {
            font-size: 3rem;
            font-weight: 900;
            color: #fff;
            line-height: 1.1;
            margin-bottom: 16px;
            text-shadow: 0 4px 24px rgba(0,0,0,.5);
            opacity: 0;
        }

        .caption-desc {
            font-size: .98rem;
            color: rgba(255,255,255,.82);
            line-height: 1.75;
            margin-bottom: 28px;
            text-shadow: 0 2px 8px rgba(0,0,0,.35);
            opacity: 0;
        }

        .caption-btn {
            display: inline-flex;
            align-items: center;
            gap: 9px;
            background: var(--red);
            color: #fff;
            padding: 13px 30px;
            border-radius: 50px;
            font-weight: 700;
            font-size: .9rem;
            border: none;
            cursor: pointer;
            box-shadow: 0 8px 24px rgba(232,69,69,.4);
            transition: var(--tr);
            opacity: 0;
        }

            .caption-btn:hover {
                background: var(--red-dark);
                color: #fff;
                transform: translateY(-3px);
                box-shadow: 0 14px 32px rgba(232,69,69,.5);
            }

        /* Keyframes */
        @@keyframes capBadgeIn {
            from {
                opacity: 0;
                transform: scale(.75)
            }

            to {
                opacity: 1;
                transform: scale(1)
            }
        }

        @@keyframes capHeadIn {
            from {
                opacity: 0;
                transform: translateX(-60px)
            }

            to {
                opacity: 1;
                transform: translateX(0)
            }
        }

        @@keyframes capDescIn {
            from {
                opacity: 0;
                transform: translateY(30px)
            }

            to {
                opacity: 1;
                transform: translateY(0)
            }
        }

        @@keyframes capCtaIn {
            from {
                opacity: 0;
                transform: scale(.8)
            }

            to {
                opacity: 1;
                transform: scale(1)
            }
        }

        #detailSlider .carousel-item.active .caption-badge {
            animation: capBadgeIn .6s ease .10s forwards;
        }

        #detailSlider .carousel-item.active .caption-heading {
            animation: capHeadIn .7s ease .35s forwards;
        }

        #detailSlider .carousel-item.active .caption-desc {
            animation: capDescIn .7s ease .62s forwards;
        }

        #detailSlider .carousel-item.active .caption-btn {
            animation: capCtaIn .6s ease .92s forwards;
        }

        /* Controls */
        #detailSlider .carousel-control-prev,
        #detailSlider .carousel-control-next {
            width: 50px;
            height: 50px;
            background: rgba(255,255,255,.12);
            backdrop-filter: blur(8px);
            border-radius: 50%;
            top: 50%;
            bottom: auto;
            transform: translateY(-50%);
            margin: 0 22px;
            opacity: 0;
            border: 1.5px solid rgba(255,255,255,.22);
            transition: var(--tr);
        }

        #detailSlider:hover .carousel-control-prev,
        #detailSlider:hover .carousel-control-next {
            opacity: 1;
        }

        #detailSlider .carousel-control-prev:hover,
        #detailSlider .carousel-control-next:hover {
            background: var(--red);
            border-color: var(--red);
        }

        #detailSlider .carousel-indicators {
            margin-bottom: 24px;
            gap: 6px;
        }

            #detailSlider .carousel-indicators button {
                width: 28px;
                height: 4px;
                border-radius: 4px;
                background: rgba(255,255,255,.4);
                border: none;
                padding: 0;
                transition: var(--tr);
            }

            #detailSlider .carousel-indicators .active {
                width: 48px;
                background: var(--red);
            }

        @@media (max-width:768px) {
            #detailSlider .carousel-inner img {
                height: 280px;
            }

            .caption-heading {
                font-size: 1.8rem;
            }

            .caption-desc {
                font-size: .88rem;
            }

            #detailSlider .carousel-caption {
                left: 5%;
                max-width: 85%;
            }

            .caption-btn {
                padding: 9px 20px;
                font-size: .82rem;
            }
        }

        @@media (max-width:576px) {
            #detailSlider .carousel-inner img {
                height: 220px;
            }

            #detailSlider .carousel-caption {
                left: 4%;
                max-width: 92%;
            }

            .caption-heading {
                font-size: 1.4rem;
                margin-bottom: 8px;
            }

            .caption-desc {
                font-size: .78rem;
                margin-bottom: 14px;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            .caption-badge {
                font-size: .62rem;
                margin-bottom: 8px;
            }
        }

        /* ===== PRODUCTS SECTION ===== */
        .products-section-wrap {
            background: var(--bg);
            padding: 32px 0 48px;
        }

        /* Restaurant bar */
        .restaurant-bar {
            background: var(--white);
            border-radius: var(--radius);
            padding: 16px 20px;
            margin-bottom: 28px;
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
            flex-wrap: wrap;
            border: 1px solid rgba(0,0,0,.05);
        }

        .restaurant-identity {
            display: flex;
            align-items: center;
            gap: 14px;
        }

        .restaurant-logo {
            width: 52px;
            height: 52px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            border: 2px solid rgba(232,69,69,.15);
        }

        .restaurant-name-text {
            font-weight: 800;
            color: var(--dark);
            font-size: 1.05rem;
            line-height: 1.2;
            margin: 0;
        }

        .restaurant-address-text {
            font-size: .74rem;
            color: var(--muted);
            margin: 3px 0 0;
            display: flex;
            align-items: center;
            gap: 4px;
        }

            .restaurant-address-text i {
                color: var(--red);
                font-size: .78rem;
            }

        .filter-wrap {
            display: flex;
            gap: 8px;
        }

            .filter-wrap .form-control,
            .filter-wrap .form-select {
                border: 1.5px solid #e0e7f3;
                border-radius: 10px;
                font-size: .85rem;
                font-family: 'Poppins',sans-serif;
                background: #f8faff;
                transition: var(--tr);
            }

                .filter-wrap .form-control:focus,
                .filter-wrap .form-select:focus {
                    border-color: var(--red);
                    box-shadow: 0 0 0 3px rgba(232,69,69,.1);
                    background: #fff;
                }

        @@media (max-width:767px) {
            .restaurant-bar {
                flex-direction: column;
                align-items: flex-start;
            }

            .filter-wrap {
                width: 100%;
            }

                .filter-wrap .form-control,
                .filter-wrap .form-select {
                    flex: 1;
                }
        }

        /* Category title */
        .product-category-title {
            margin: 36px 0 20px;
            display: flex;
            align-items: center;
            gap: 14px;
        }

            .product-category-title::before,
            .product-category-title::after {
                content: '';
                flex: 1;
                height: 1.5px;
                background: linear-gradient(90deg,transparent,rgba(232,69,69,.2),transparent);
            }

        .category-badge {
            background: var(--dark);
            color: #fff;
            padding: 7px 20px;
            border-radius: 50px;
            font-size: .88rem;
            font-weight: 700;
            letter-spacing: .5px;
            white-space: nowrap;
            box-shadow: 0 4px 16px rgba(26,26,46,.2);
        }

        /* Product card */
        .product-item {
            background: var(--white);
            border-radius: var(--radius);
            overflow: hidden;
            height: 100%;
            box-shadow: var(--shadow-sm);
            transition: transform .35s cubic-bezier(.34,1.56,.64,1), box-shadow .35s ease;
            display: flex;
            flex-direction: column;
            border: 1px solid rgba(0,0,0,.05);
        }

            .product-item:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 48px rgba(232,69,69,.15);
            }

        .product-img {
            height: 150px;
            overflow: hidden;
            background: #f0f4ff;
            position: relative;
        }

            .product-img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform .5s ease;
            }

        .product-item:hover .product-img img {
            transform: scale(1.1);
        }

        .discount-badge {
            position: absolute;
            top: 8px;
            right: 8px;
            background: linear-gradient(135deg,var(--danger),#c0392b);
            color: #fff;
            font-size: 11px;
            font-weight: 800;
            padding: 3px 9px;
            border-radius: 20px;
            z-index: 2;
            box-shadow: 0 4px 12px rgba(220,53,69,.4);
        }

        .product-info {
            padding: 14px 14px 16px;
            display: flex;
            flex-direction: column;
            gap: 5px;
            flex-grow: 1;
        }

        .product-name {
            font-size: .92rem;
            font-weight: 700;
            margin: 0;
            color: var(--dark);
            line-height: 1.3;
        }

        .product-description {
            font-size: .76rem;
            color: var(--muted);
            line-height: 1.4;
        }

        .product-price {
            margin-top: auto;
            display: flex;
            align-items: baseline;
            gap: 6px;
            padding-top: 6px;
        }

        .current-price {
            font-weight: 800;
            font-size: 1rem;
            color: var(--success);
        }

        .old-price {
            font-size: .82rem;
            color: var(--danger);
            text-decoration: line-through;
            opacity: .8;
        }

        .qty-box {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 12px;
            gap: 14px;
            background: #f6f7fb;
            border-radius: 30px;
            padding: 6px 10px;
        }

        .qty-btn {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: none;
            background: var(--dark);
            color: #fff;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: transform .2s, background .2s;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(26,26,46,.25);
            line-height: 1;
        }

            .qty-btn:hover {
                transform: scale(1.12);
                background: var(--red);
            }

            .qty-btn:active {
                transform: scale(.93);
            }

        .qty-value {
            font-size: 1rem;
            font-weight: 800;
            min-width: 24px;
            text-align: center;
            color: var(--dark);
        }

        @@media (max-width:576px) {
            .product-img {
                height: 120px;
            }

            .product-name {
                font-size: .85rem;
            }

            .product-description {
                font-size: .72rem;
            }

            .qty-btn {
                width: 28px;
                height: 28px;
                font-size: 1rem;
            }
        }

        /* Flying img */
        .flying-img {
            position: fixed;
            z-index: 9999;
            pointer-events: none;
            transition: all .75s cubic-bezier(.4,0,.2,1);
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0,0,0,.2);
        }

        /* ===== CART DRAWER ===== */
        .cart-drawer {
            position: fixed;
            top: 0;
            right: -420px;
            width: 380px;
            height: 100vh;
            background: #fff;
            z-index: 1300;
            display: flex;
            flex-direction: column;
            transition: right .38s cubic-bezier(.4,0,.2,1);
            box-shadow: -12px 0 48px rgba(0,0,0,.18);
        }

            .cart-drawer.open {
                right: 0;
            }

        .cart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 20px 14px;
            border-bottom: 2px solid rgba(26,26,46,.08);
            flex-shrink: 0;
        }

            .cart-header h4 {
                font-weight: 800;
                color: var(--dark);
                font-size: 1.1rem;
                display: flex;
                align-items: center;
                gap: 8px;
                margin: 0;
            }

                .cart-header h4 i {
                    color: var(--red);
                }

        .cart-close-btn {
            border: none;
            background: #f4f6fb;
            width: 34px;
            height: 34px;
            border-radius: 50%;
            font-size: 18px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--tr);
            color: #444;
        }

            .cart-close-btn:hover {
                background: var(--red);
                color: #fff;
            }

        .cart-items-scroll {
            flex-grow: 1;
            overflow-y: auto;
            padding: 12px 14px 6px;
        }

            .cart-items-scroll::-webkit-scrollbar {
                width: 4px;
            }

            .cart-items-scroll::-webkit-scrollbar-track {
                background: transparent;
            }

            .cart-items-scroll::-webkit-scrollbar-thumb {
                background: rgba(232,69,69,.25);
                border-radius: 10px;
            }

        .cart-empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            color: var(--muted);
            text-align: center;
        }

        .cart-empty-icon {
            width: 72px;
            height: 72px;
            border-radius: 50%;
            background: #f4f6fb;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: rgba(26,26,46,.2);
            margin-bottom: 14px;
        }

        .cart-empty-text {
            font-size: .85rem;
            font-weight: 600;
            color: rgba(26,26,46,.35);
        }

        /* Cart Item — with qty controls */
        .cart-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 12px;
            background: #fff;
            border: 1px solid rgba(26,26,46,.06);
            margin-bottom: 8px;
            transition: box-shadow .25s ease;
        }

            .cart-item:hover {
                box-shadow: 0 4px 16px rgba(26,26,46,.08);
            }

            .cart-item:last-child {
                margin-bottom: 0;
            }

        .cart-item-img {
            width: 52px;
            height: 52px;
            object-fit: cover;
            border-radius: 10px;
            flex-shrink: 0;
            box-shadow: 0 2px 8px rgba(0,0,0,.12);
        }

        .cart-item-info {
            flex: 1;
            min-width: 0;
        }

            .cart-item-info strong {
                font-size: .82rem;
                display: block;
                color: var(--dark);
                font-weight: 700;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .cart-item-price-unit {
            font-size: .72rem;
            color: var(--muted);
            margin-top: 2px;
        }

        /* Qty controls inside cart */
        .cart-qty-box {
            display: flex;
            align-items: center;
            gap: 6px;
            background: #f6f7fb;
            border-radius: 20px;
            padding: 3px 6px;
            flex-shrink: 0;
        }

        .cart-qty-btn {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            border: none;
            background: var(--dark);
            color: #fff;
            font-size: .95rem;
            font-weight: 700;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background .2s, transform .15s;
            line-height: 1;
            flex-shrink: 0;
        }

            .cart-qty-btn:hover {
                background: var(--red);
                transform: scale(1.1);
            }

            .cart-qty-btn:active {
                transform: scale(.9);
            }

            .cart-qty-btn.minus {
                background: rgba(26,26,46,.15);
                color: var(--dark);
            }

                .cart-qty-btn.minus:hover {
                    background: var(--danger);
                    color: #fff;
                }

        .cart-qty-num {
            font-size: .85rem;
            font-weight: 800;
            min-width: 18px;
            text-align: center;
            color: var(--dark);
        }

        .cart-item-right {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 6px;
            flex-shrink: 0;
        }

        .cart-item-total {
            font-weight: 800;
            font-size: .88rem;
            color: var(--success);
            white-space: nowrap;
        }

        .cart-item-remove {
            background: none;
            border: none;
            cursor: pointer;
            color: rgba(220,53,69,.5);
            font-size: .75rem;
            padding: 0;
            transition: color .2s;
            display: flex;
            align-items: center;
            gap: 3px;
        }

            .cart-item-remove:hover {
                color: var(--danger);
            }

        .cart-total {
            padding: 14px 16px;
            border-top: 1.5px solid rgba(26,26,46,.07);
            flex-shrink: 0;
            background: #f8f9fb;
        }

        .cart-total-inner {
            background: #fff;
            border-radius: 12px;
            padding: 12px 14px;
            border: 1px solid rgba(26,26,46,.06);
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 7px;
            font-size: .82rem;
            color: #555;
        }

            .total-row:last-child {
                margin-bottom: 0;
            }

            .total-row .lbl {
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: 5px;
            }

                .total-row .lbl i {
                    font-size: .8rem;
                    opacity: .6;
                }

            .total-row .val {
