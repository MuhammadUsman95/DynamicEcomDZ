@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Coming Soon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Fullscreen video background styles */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: white;
        }

        .video-bg {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
            object-fit: cover;
            filter: brightness(0.5);
        }

        /* Overlay on top of video for better text visibility */
        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.45);
            z-index: 0;
        }

        /* Centered content box */
        .coming-soon-box {
            position: relative;
            z-index: 1;
            max-width: 450px;
            margin: 0 auto;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.6);
            padding: 40px 50px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 0 30px rgba(0,0,0,0.8);
        }

        h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #ffd700; /* golden text */
            text-shadow: 2px 2px 8px rgba(0,0,0,0.8);
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 30px;
            color: #ddd;
            text-shadow: 1px 1px 6px rgba(0,0,0,0.7);
        }

        .btn-primary {
            background: #ffd700;
            color: #222;
            padding: 12px 35px;
            font-weight: 600;
            font-size: 1.1rem;
            border-radius: 50px;
            border: none;
            box-shadow: 0 6px 12px rgba(255, 215, 0, 0.6);
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-primary:hover, .btn-primary:focus {
                background: #ffea00;
                color: #111;
                transform: scale(1.05);
                box-shadow: 0 8px 16px rgba(255, 235, 59, 0.9);
            }


        {
            padding: 25px 30px;
            max-width: 90vw;
        }

        h1 {
            font-size: 2.5rem;
        }

        p {
            font-size: 1rem;
        }

        .btn-primary {
            padding: 10px 25px;
            font-size: 1rem;
        }

        }
    </style>
</head>
<body>

    <video autoplay muted loop playsinline class="video-bg">
        <source src="~/images/videos/short-bg.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>

    <div class="overlay"></div>

    <div class="coming-soon-box" role="main" aria-label="Coming Soon Message">
        <h1>Coming Soon</h1>
        <p>This feature/page is under development. Please check back later!</p>
        <a href="/" class="btn btn-primary" role="button">Go to Home</a>
    </div>

</body>
</html>
