@model List<DynamicEcomDZ.Models.RedirectionTAB>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello B17</title>
    <link rel="icon" href="/favicon.ico">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        /* Background */
        body {
            position: relative;
            background: linear-gradient(rgba(145, 145, 145, 0.6), rgba(61, 61, 61, 0.6)), url(/images/Background.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.6);
            z-index: 999;
            animation: fadeIn 0.4s ease forwards;
        }

        .modal-dialog-advanced {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 900px;
            max-width: 95vw;
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 22px 44px rgba(0, 0, 0, 0.38), 0 10px 20px rgba(0, 0, 0, 0.22);
            z-index: 1000;
            max-height: 90vh;
            display: flex;
            flex-direction: column;
            animation: slideUp 0.5s ease forwards;
        }

        /* Logo Header Section Inside Dialog */
        .modal-logo-header {
            padding: 24px 32px 16px 32px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-bottom: 2px solid #f0f0f0;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-radius: 18px 18px 0 0;
        }

        .modal-logo {
            max-width: 180px;
            height: auto;
            max-height: 80px;
            object-fit: contain;
            animation: logoFadeIn 0.6s ease forwards;
            filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.1));
        }

        @@keyframes logoFadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .modal-body-advanced {
            padding: 32px;
            overflow-y: auto;
            overflow-x: hidden;
            flex: 1;
        }

        /* Updated Card Styles */
        .card-tile {
            position: relative;
            height: 240px;
            border-radius: 20px;
            overflow: hidden;
            text-decoration: none;
            display: block;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: #fff;
            margin-bottom: 0;
        }

            .card-tile:hover {
                transform: translateY(-8px) scale(1.05);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
                z-index: 10;
            }

            .card-tile img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 20px;
                transition: transform 0.4s ease;
            }

            .card-tile:hover img {
                transform: scale(1.1);
            }

        .card-badge {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 24px;
            background: rgba(0, 0, 0, 0.75);
            color: #fff;
            font-size: 16px;
            font-weight: 700;
            border-radius: 9999px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
            white-space: nowrap;
            transition: background-color 0.3s ease, transform 0.3s ease;
            max-width: 90%;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-tile:hover .card-badge {
            background: rgba(0, 0, 0, 0.95);
            transform: translateX(-50%) scale(1.05);
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translate(-50%, -40%);
        }

        to {
            opacity: 1;
            transform: translate(-50%, -50%);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        /* Custom scrollbar for modal */
        .modal-body-advanced::-webkit-scrollbar {
            width: 8px;
        }

        .modal-body-advanced::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .modal-body-advanced::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }

            .modal-body-advanced::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

        /* Responsive Grid System for 6 Categories */
        /* Large Desktop (3 columns) */
        @@media (min-width: 1200px) {
            .modal-dialog-advanced

        {
            width: 1100px;
        }

        .card-tile {
            height: 260px;
        }


        .row.g-4 {
            --bs-gutter-y: 1.5rem;
            --bs-gutter-x: 1.5rem;
        }

        .modal-logo {
                max-width: 250vh;
                max-height: 12vh;
        }

        }

        /* Desktop (3 columns) */
        @@media (min-width: 992px) and (max-width: 1199px) {
            .modal-dialog-advanced

        {
            width: 950px;
        }

        .card-tile {
            height: 240px;
        }

        .row.g-4 {
            --bs-gutter-y: 1.25rem;
            --bs-gutter-x: 1.25rem;
        }

        .modal-logo {
            max-width: 180px;
            max-height: 80px;
        }

        }

        /* Tablet Landscape (3 columns, smaller) */
        @@media (min-width: 768px) and (max-width: 991px) {
            .modal-dialog-advanced

        {
            width: 90vw;
            max-height: 88vh;
        }

        .modal-logo-header {
            padding: 20px 24px 12px 24px;
        }

        .modal-logo {
            max-width: 160px;
            max-height: 70px;
        }

        .modal-body-advanced {
            padding: 24px;
        }

        .card-tile {
            height: 200px;
        }

        .card-badge {
            font-size: 14px;
            padding: 8px 20px;
            bottom: 16px;
        }

        .row.g-4 {
            --bs-gutter-y: 1rem;
            --bs-gutter-x: 1rem;
        }

        }

        /* Tablet Portrait (2 columns) */
        @@media (min-width: 576px) and (max-width: 767px) {
            .modal-dialog-advanced

        {
            width: 92vw;
            max-height: 85vh;
            border-radius: 14px;
        }

        .modal-logo-header {
            padding: 18px 20px 10px 20px;
            border-radius: 14px 14px 0 0;
        }

        .modal-logo {
            max-width: 140px;
            max-height: 60px;
        }

        .modal-body-advanced {
            padding: 20px;
        }

        .card-tile {
            height: 180px;
        }

        .card-badge {
            font-size: 14px;
            padding: 8px 18px;
            bottom: 14px;
        }

        .row.g-4 {
            --bs-gutter-y: 0.875rem;
            --bs-gutter-x: 0.875rem;
        }

        /* For 2-column layout on tablets */
        .col-6.col-md-4 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        }

        /* Mobile Landscape (2 columns) */
        @@media (min-width: 480px) and (max-width: 575px) {
            .modal-dialog-advanced

        {
            width: 95vw;
            max-height: 82vh;
            border-radius: 12px;
        }

        .modal-logo-header {
            padding: 16px 16px 8px 16px;
            border-radius: 12px 12px 0 0;
        }

        .modal-logo {
            max-width: 120px;
            max-height: 50px;
        }

        .modal-body-advanced {
            padding: 16px;
        }

        .card-tile {
            height: 160px;
        }

        .card-badge {
            font-size: 13px;
            padding: 7px 16px;
            bottom: 12px;
        }

        .row.g-4 {
            --bs-gutter-y: 0.75rem;
            --bs-gutter-x: 0.75rem;
        }

        }

        /* Mobile Portrait (2 columns stacked) */
        @@media (max-width: 479px) {
            .modal-dialog-advanced

        {
            width: 96vw;
            max-height: 80vh;
            border-radius: 10px;
        }

        .modal-logo-header {
            padding: 14px 12px 8px 12px;
            border-radius: 10px 10px 0 0;
        }

        .modal-logo {
            max-width: 100px;
            max-height: 45px;
        }

        .modal-body-advanced {
            padding: 12px;
        }

        .card-tile {
            height: 140px;
            border-radius: 14px;
        }

            .card-tile img {
                border-radius: 14px;
            }

        .card-badge {
            font-size: 12px;
            padding: 6px 14px;
            bottom: 10px;
            font-weight: 600;
        }

        .row.g-4 {
            --bs-gutter-y: 0.625rem;
            --bs-gutter-x: 0.625rem;
        }

        }

        /* Extra small devices */
        @@media (max-width: 360px) {
            .modal-dialog-advanced

        {
            width: 98vw;
            max-height: 78vh;
        }

        .modal-logo-header {
            padding: 12px 10px 6px 10px;
        }

        .modal-logo {
            max-width: 90px;
            max-height: 40px;
        }

        .modal-body-advanced {
            padding: 10px;
        }

        .card-tile {
            height: 130px;
            border-radius: 12px;
        }

            .card-tile img {
                border-radius: 12px;
            }

        .card-badge {
            font-size: 11px;
            padding: 5px 12px;
            bottom: 8px;
        }

        .row.g-4 {
            --bs-gutter-y: 0.5rem;
            --bs-gutter-x: 0.5rem;
        }

        }

        /* Orientation-specific adjustments */
        @@media (orientation: landscape) and (max-height: 500px) {
            .modal-dialog-advanced

        {
            max-height: 95vh;
        }

        .modal-logo-header {
            padding: 12px 16px 6px 16px;
        }

        .modal-logo {
            max-width: 100px;
            max-height: 40px;
        }

        .modal-body-advanced {
            padding: 16px;
        }

        .card-tile {
            height: 140px;
        }

        }
    </style>
</head>

<body>

    <div class="modal-overlay"></div>

    <div class="modal-dialog-advanced" role="main" aria-label="Active Pages">

        <!-- Logo Header Inside Dialog Box -->
        <div class="modal-logo-header">
            <!-- Method 1: URL Encoded (TRY THIS FIRST) -->
            <img src="/images/png%20orignal.png" alt="Company Logo" class="modal-logo" />

            <!-- Method 2: If file renamed (UNCOMMENT if renamed to png-orignal.png) -->
            <!-- <img src="/images/png-orignal.png" alt="Company Logo" class="modal-logo" /> -->
            <!-- Method 3: If file renamed (UNCOMMENT if renamed to logo.png) -->
            <!-- <img src="/images/logo.png" alt="Company Logo" class="modal-logo" /> -->
        </div>

        <!-- Cards Section -->
        <div class="modal-body-advanced">
            <div class="container-fluid p-0">
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-6 col-md-4">
                            <a href="@(item.FormUrl == "ComingSoon" ? Url.Action("ComingSoonPage", "Redirection") : "/" + item.FormUrl + "/Index/" + item.Id)"
                               onclick="localStorage.setItem('SelectionId', '@item.Id')"
                               class="card-tile"
                               title="@item.Name"
                               aria-label="@item.Name">
                                @if (!string.IsNullOrEmpty(item.TabIcon))
                                {
                                    <img src="@("/images/Department/" + item.TabIcon)" alt="@item.Name" loading="lazy" />
                                }
                                else
                                {
                                    <img src="https://cdn-icons-png.flaticon.com/512/545/545682.png" alt="@item.Name" loading="lazy" />
                                }
                                <div class="card-badge">@item.Name</div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
