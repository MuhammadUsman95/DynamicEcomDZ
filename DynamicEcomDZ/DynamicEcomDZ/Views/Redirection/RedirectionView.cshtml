@model List<DynamicEcomDZ.Models.RedirectionTAB>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Active Pages</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        /* Background */
        body {
            background: linear-gradient(rgb(145 145 145 / 60%), rgb(61 61 61 / 60%)), url(/images/premium_photo-1661883237884-263e8de8869b.jpg);
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            height: 100vh;
            overflow: hidden;
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.6);
            z-index: 999;
            animation: fadeIn .4s ease forwards;
        }

        .modal-dialog-advanced {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 760px;
            max-width: 95vw;
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 22px 44px rgba(0,0,0,.38), 0 10px 20px rgba(0,0,0,.22);
            z-index: 1000;
            max-height: 90vh;
            display: flex;
            flex-direction: column;
            animation: slideUp .5s ease forwards;
        }

        .modal-body-advanced {
            padding: 28px;
            overflow-y: auto;
        }

        /* Updated Card Styles */
        .card-tile {
            position: relative;
            height: 220px;
            border-radius: 20px;
            overflow: hidden;
            text-decoration: none;
            display: block;
            box-shadow: 0 12px 30px rgba(0,0,0,0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: #fff;
        }

            .card-tile:hover {
                transform: translateY(-8px) scale(1.05);
                box-shadow: 0 20px 50px rgba(0,0,0,0.4);
            }

            .card-tile img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 20px;
                transition: transform 0.4s ease;
            }

            .card-tile:hover img {
                transform: scale(1.1);
            }

        .card-badge {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 24px;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            font-size: 16px;
            font-weight: 700;
            border-radius: 9999px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
            white-space: nowrap;
            transition: background-color 0.3s ease;
        }

        .card-tile:hover .card-badge {
            background: rgba(0, 0, 0, 0.9);
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translate(-50%, -40%);
        }

        to {
            opacity: 1;
            transform: translate(-50%, -50%);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        /* Mobile Responsive Styles */
        @@media (max-width: 768px) {
            .modal-dialog-advanced

        {
            width: 90vw;
            max-height: 85vh;
            border-radius: 12px;
        }

        .modal-body-advanced {
            padding: 15px;
        }

        .card-tile {
            height: 160px;
            margin-bottom: 12px;
        }

        .card-badge {
            font-size: 14px;
            padding: 8px 18px;
            bottom: 15px;
        }

        .row.g-4 {
            --bs-gutter-y: 0.75rem;
            --bs-gutter-x: 0.75rem;
        }

        }

        @@media (max-width: 576px) {
            .modal-dialog-advanced

        {
            width: 95vw;
            max-height: 80vh;
            border-radius: 10px;
        }

        .modal-body-advanced {
            padding: 10px;
        }

        .card-tile {
            height: 130px;
            margin-bottom: 10px;
        }

        .card-badge {
            font-size: 12px;
            padding: 6px 15px;
            bottom: 12px;
        }

        .row.g-4 {
            --bs-gutter-y: 0.5rem;
            --bs-gutter-x: 0.5rem;
        }

        }
    </style>
</head>

<body>

    <div class="modal-overlay"></div>

    <div class="modal-dialog-advanced" role="main" aria-label="Active Pages">
        <div class="modal-body-advanced">
            <div class="container-fluid p-0">
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-6">
                            <a href="@(item.FormUrl == "ComingSoon" ? Url.Action("ComingSoonPage", "Redirection") : "/" + item.FormUrl)" class="card-tile" title="@item.Name">
                                @if (!string.IsNullOrEmpty(item.TabIcon))
                                {
                                    <img src="@("/images/Department/" + item.TabIcon)" alt="@item.Name" />
                                }
                                else
                                {
                                    <img src="https://cdn-icons-png.flaticon.com/512/545/545682.png" alt="@item.Name" />
                                }
                                <div class="card-badge">@item.Name</div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>