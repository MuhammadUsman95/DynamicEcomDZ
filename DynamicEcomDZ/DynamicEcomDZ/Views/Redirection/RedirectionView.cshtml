@model List<DynamicEcomDZ.Models.RedirectionTAB>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello B17</title>
    <link rel="icon" href="/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800;900&display=swap" />
    <style>
        *, *::before, *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --accent: #ff5722;
            --card-radius: 18px;
            --dialog-radius: 24px;
            --shadow-card: 0 8px 32px rgba(0,0,0,0.22);
            --shadow-hover: 0 20px 50px rgba(0,0,0,0.38);
            --badge-bg: rgba(10,10,10,0.72);
            --transition: 0.32s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        body {
            font-family: 'Nunito', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(30,30,30,0.72) 0%, rgba(10,10,10,0.55) 100%), url(/images/Background.jpg) center/cover fixed no-repeat;
            overflow-x: hidden;
        }

        /* ── Overlay ── */
        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.45);
            backdrop-filter: blur(2px);
            z-index: 0;
            animation: fadeIn 0.4s ease;
        }

        /* ── Dialog ── */
        .dialog {
            position: relative;
            z-index: 10;
            width: min(960px, 96vw);
            max-height: 92vh;
            display: flex;
            flex-direction: column;
            background: #fff;
            border-radius: var(--dialog-radius);
            box-shadow: 0 32px 80px rgba(0,0,0,0.45), 0 8px 24px rgba(0,0,0,0.2);
            animation: slideUp 0.5s cubic-bezier(0.22, 1, 0.36, 1) forwards;
            overflow: hidden;
        }

        /* ── Logo Header ── */
        .dialog-header {
            padding: clamp(14px, 3vw, 28px) clamp(16px, 4vw, 36px);
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(160deg, #f8f9fa 0%, #ffffff 100%);
            border-bottom: 1px solid #ebebeb;
            flex-shrink: 0;
        }

        .dialog-logo {
            height: clamp(40px, 7vw, 80px);
            width: auto;
            max-width: 100%;
            object-fit: contain;
            filter: drop-shadow(0 2px 8px rgba(0,0,0,0.1));
            animation: logoIn 0.6s ease 0.2s both;
        }

        /* ── Body / Grid ── */
        .dialog-body {
            padding: clamp(14px, 3vw, 28px);
            overflow-y: auto;
            overflow-x: hidden;
            flex: 1;
        }

            /* Custom Scrollbar */
            .dialog-body::-webkit-scrollbar {
                width: 6px;
            }

            .dialog-body::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 8px;
            }

            .dialog-body::-webkit-scrollbar-thumb {
                background: #ccc;
                border-radius: 8px;
            }

                .dialog-body::-webkit-scrollbar-thumb:hover {
                    background: #999;
                }

        /* Responsive grid */
        .cards-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr); /* Mobile: 2 columns always */
            gap: clamp(10px, 2.5vw, 22px);
        }

        /* Tablet: 3 columns */
        @@media (min-width: 640px) {
            .cards-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        /* Desktop: 3 columns with more spacing */
        @@media (min-width: 960px) {
            .cards-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        /* ── Card ── */
        .card {
            position: relative;
            border-radius: var(--card-radius);
            overflow: hidden;
            text-decoration: none;
            display: block;
            aspect-ratio: 4/3;
            background: #e0e0e0;
            box-shadow: var(--shadow-card);
            transition: transform var(--transition), box-shadow var(--transition);
            will-change: transform;
        }

            .card:hover {
                transform: translateY(-7px) scale(1.04);
                box-shadow: var(--shadow-hover);
                z-index: 5;
            }

        .card-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img {
            transform: scale(1.08);
        }

        /* Gradient overlay on card */
        .card::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,0.65) 0%, transparent 55%);
            border-radius: var(--card-radius);
            pointer-events: none;
        }

        /* ── Badge ── */
        .card-badge {
            position: absolute;
            bottom: 14px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            padding: 7px 20px;
            background: var(--badge-bg);
            color: #fff;
            font-size: clamp(12px, 1.4vw, 15px);
            font-weight: 800;
            border-radius: 999px;
            white-space: nowrap;
            max-width: 88%;
            overflow: hidden;
            text-overflow: ellipsis;
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255,255,255,0.12);
            box-shadow: 0 4px 16px rgba(0,0,0,0.4);
            letter-spacing: 0.3px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .card:hover .card-badge {
            background: rgba(0,0,0,0.9);
            transform: translateX(-50%) scale(1.06);
        }

        /* ── Animations ── */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(40px) scale(0.97);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        @@keyframes logoIn {
            from {
                opacity: 0;
                transform: translateY(-8px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Staggered card entrance */
        .card {
            animation: cardIn 0.45s ease both;
        }

        @@keyframes cardIn {
            from {
                opacity: 0;
                transform: translateY(24px) scale(0.96);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* ── Very small phones ── */
        @@media (max-width: 360px) {
            .card {
                aspect-ratio: 3/2.6;
            }

            .card-badge {
                font-size: 11px;
                padding: 5px 10px;
                bottom: 7px;
            }
        }

        /* Landscape on short phones */
        @@media (orientation: landscape) and (max-height: 480px) {
            .dialog {
                max-height: 96vh;
            }

            .dialog-header {
                padding: 10px 16px;
            }

            .dialog-logo {
                height: 36px;
            }

            .cards-grid {
                grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
                gap: 10px;
            }

            .card {
                aspect-ratio: 16/9;
            }
        }
    </style>
</head>

<body>
    <div class="overlay"></div>

    <div class="dialog" role="main" aria-label="Active Pages">

        <!-- Logo Header -->
        <div class="dialog-header">
            <img src="/images/png%20orignal.png"
                 alt="HelloB17 Logo"
                 class="dialog-logo"
                 onerror="this.src='/images/logo.png'" />
        </div>

        <!-- Cards -->
        <div class="dialog-body">
            <div class="cards-grid">
                @{
                    int i = 0;
                }
                @foreach (var item in Model)
                {
                    <a href="@(item.FormUrl == "ComingSoon" ? Url.Action("ComingSoonPage", "Redirection") : "/" + item.FormUrl + "/Index/" + item.Id)"
                       onclick="localStorage.setItem('SelectionId', '@item.Id')"
                       class="card"
                       title="@item.Name"
                       aria-label="@item.Name"
                       style="animation-delay: @(i * 0.07)s">

                        @if (!string.IsNullOrEmpty(item.TabIcon))
                        {
                            <img class="card-img"
                                 src="@("/images/Department/" + item.TabIcon)"
                                 alt="@item.Name"
                                 loading="lazy" />
                        }
                        else
                        {
                            <img class="card-img"
                                 src="https://cdn-icons-png.flaticon.com/512/545/545682.png"
                                 alt="@item.Name"
                                 loading="lazy" />
                        }

                        <div class="card-badge">@item.Name</div>
                    </a>
                    i++;
                }
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
