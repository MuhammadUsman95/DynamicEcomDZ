@model SliderViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Restaurants</title>
    <link rel="icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=DM+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --amber: #E8A020;
            --amber-lt: #F5C96A;
            --charcoal: #1C1C1E;
            --ink: #2D2D2D;
            --cream: #FBF7F0;
            --muted: #9A9A9A;
            --card-bg: #FFFFFF;
            --radius: 16px;
            --shadow: 0 8px 32px rgba(0,0,0,.10);
            --shadow-hov: 0 20px 48px rgba(0,0,0,.18);
        }

        *, *::before, *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--cream);
            font-family: 'DM Sans', sans-serif;
            color: var(--ink);
        }

        /* ========== NAV BAR ========== */
        .top-nav {
            background: var(--charcoal);
            padding: 14px 0;
            position: sticky;
            top: 0;
            z-index: 999;
        }

            .top-nav .brand {
                font-family: 'Playfair Display', serif;
                font-size: 1.5rem;
                color: var(--amber);
                letter-spacing: 1px;
                text-decoration: none;
            }

                .top-nav .brand span {
                    color: #fff;
                }

        /* ========== SLIDER ========== */
        .slider-wrap {
            position: relative;
            overflow: hidden;
        }

        #mainSlider .carousel-item img {
            height: 480px;
            object-fit: cover;
            filter: brightness(55%);
            transition: transform 8s ease;
        }

        #mainSlider .carousel-item.active img {
            transform: scale(1.04);
        }

        .carousel-caption {
            bottom: 50%;
            transform: translateY(50%);
            text-align: left;
            left: 8%;
            right: auto;
            max-width: 520px;
        }

            .carousel-caption .label {
                display: inline-block;
                background: var(--amber);
                color: #fff;
                font-size: 11px;
                font-weight: 600;
                letter-spacing: 2px;
                text-transform: uppercase;
                padding: 4px 14px;
                border-radius: 20px;
                margin-bottom: 14px;
                animation: fadeUp .6s ease both;
            }

            .carousel-caption h2 {
                font-family: 'Playfair Display', serif;
                font-size: clamp(1.8rem, 4vw, 3rem);
                color: #fff;
                line-height: 1.2;
                margin-bottom: 12px;
                animation: fadeUp .7s ease .1s both;
            }

            .carousel-caption p {
                color: rgba(255,255,255,.82);
                font-size: .95rem;
                animation: fadeUp .7s ease .2s both;
            }

        .carousel-control-prev,
        .carousel-control-next {
            width: 48px;
            height: 48px;
            top: 50%;
            transform: translateY(-50%);
            bottom: auto;
            background: rgba(255,255,255,.15);
            backdrop-filter: blur(8px);
            border-radius: 50%;
            opacity: 1;
            transition: background .2s;
        }

        .carousel-control-prev {
            left: 24px;
        }

        .carousel-control-next {
            right: 24px;
        }

            .carousel-control-prev:hover,
            .carousel-control-next:hover {
                background: var(--amber);
            }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 18px;
            height: 18px;
        }

        /* Slide indicators */
        .carousel-indicators [data-bs-target] {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255,255,255,.5);
            border: none;
        }

        .carousel-indicators .active {
            background: var(--amber);
        }

        /* ========== SECTION HEADER ========== */
        .section-header {
            display: flex;
            flex-direction: column;
            gap: 4px;
            margin-bottom: 36px;
        }

            .section-header .eyebrow {
                font-size: 11px;
                font-weight: 600;
                letter-spacing: 3px;
                text-transform: uppercase;
                color: var(--amber);
            }

            .section-header h3 {
                font-family: 'Playfair Display', serif;
                font-size: clamp(1.6rem, 3vw, 2.4rem);
                color: var(--charcoal);
            }

        /* ========== FILTER BAR ========== */
        .filter-bar {
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
        }

            .filter-bar input,
            .filter-bar select {
                border: 1.5px solid #E5E0D8;
                border-radius: 40px;
                background: #fff;
                padding: 9px 18px;
                font-size: .85rem;
                color: var(--ink);
                font-family: 'DM Sans', sans-serif;
                outline: none;
                transition: border-color .2s, box-shadow .2s;
            }

                .filter-bar input:focus,
                .filter-bar select:focus {
                    border-color: var(--amber);
                    box-shadow: 0 0 0 3px rgba(232,160,32,.15);
                }

            .filter-bar input {
                min-width: 200px;
                flex: 1;
            }

            .filter-bar .search-wrap {
                position: relative;
                flex: 1;
            }

                .filter-bar .search-wrap i {
                    position: absolute;
                    left: 14px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: var(--muted);
                    font-size: .9rem;
                }

            .filter-bar input {
                padding-left: 38px;
            }

        /* ========== RESTAURANT CARD ========== */
        .r-card {
            border-radius: var(--radius);
            background: var(--card-bg);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform .3s cubic-bezier(.25,.8,.25,1), box-shadow .3s;
            position: relative;
            animation: fadeUp .5s ease both;
            height: 100%;
        }

            .r-card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-hov);
            }

        .r-card__img-wrap {
            position: relative;
            overflow: hidden;
        }

            .r-card__img-wrap img {
                width: 100%;
                height: 160px;
                object-fit: cover;
                transition: transform .5s ease;
            }

        .r-card:hover .r-card__img-wrap img {
            transform: scale(1.07);
        }

        /* Overlay gradient on image */
        .r-card__img-wrap::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,.35) 0%, transparent 60%);
            pointer-events: none;
        }

        /* Delivery badge */
        .r-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 2;
            font-size: 10px;
            font-weight: 600;
            padding: 4px 10px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            gap: 4px;
            backdrop-filter: blur(6px);
            border: 1px solid rgba(255,255,255,.25);
        }

            .r-badge.free {
                background: rgba(25,185,84,.85);
                color: #fff;
            }

            .r-badge.paid {
                background: rgba(232,160,32,.92);
                color: #fff;
            }

        /* Rating on image (bottom left) */
        .r-rating-img {
            position: absolute;
            bottom: 10px;
            left: 10px;
            z-index: 2;
            display: flex;
            gap: 2px;
        }

            .r-rating-img i {
                color: var(--amber);
                font-size: 11px;
            }

                .r-rating-img i.empty {
                    color: rgba(255,255,255,.45);
                }

        .r-card__body {
            padding: 14px 16px 16px;
        }

            .r-card__body h6 {
                font-weight: 600;
                font-size: .92rem;
                color: var(--charcoal);
                margin-bottom: 6px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .r-meta {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 6px;
        }

        .r-type-badge {
            font-size: 10px;
            font-weight: 600;
            padding: 3px 10px;
            border-radius: 20px;
            background: var(--amber);
            color: #fff;
            letter-spacing: .3px;
        }

        .r-time {
            font-size: 10px;
            color: var(--muted);
            display: flex;
            align-items: center;
            gap: 3px;
        }

        /* ========== EMPTY STATE ========== */
        .empty-state {
            text-align: center;
            padding: 60px 0;
            color: var(--muted);
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 12px;
                color: #DDD;
            }

            .empty-state p {
                font-size: .95rem;
            }

        /* ========== MODAL ========== */
        .modal-content {
            border-radius: 20px;
            overflow: hidden;
            border: none;
            box-shadow: 0 24px 60px rgba(0,0,0,.25);
        }

        .modal-header {
            background: linear-gradient(135deg, #E53935, #B71C1C);
            padding: 18px 24px;
        }

            .modal-header .modal-title {
                font-family: 'Playfair Display', serif;
                font-size: 1.2rem;
            }

        .modal-body {
            padding: 24px;
            font-size: .95rem;
            color: var(--ink);
        }

        .modal-footer {
            border-top: 1px solid #F0EDE8;
            padding: 14px 24px;
        }

        .btn-close-modal {
            background: var(--charcoal);
            color: #fff;
            border: none;
            border-radius: 30px;
            padding: 8px 28px;
            font-size: .9rem;
            font-weight: 500;
            cursor: pointer;
            transition: background .2s;
        }

            .btn-close-modal:hover {
                background: var(--amber);
            }

        /* ========== FOOTER STRIP ========== */
        .footer-strip {
            background: var(--charcoal);
            color: rgba(255,255,255,.45);
            font-size: .8rem;
            text-align: center;
            padding: 18px;
            margin-top: 80px;
        }

            .footer-strip span {
                color: var(--amber);
            }

        /* ========== ANIMATIONS ========== */
        @@keyframes fadeUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Staggered card animation */
        .col-card:nth-child(1) .r-card {
            animation-delay: .05s;
        }

        .col-card:nth-child(2) .r-card {
            animation-delay: .10s;
        }

        .col-card:nth-child(3) .r-card {
            animation-delay: .15s;
        }

        .col-card:nth-child(4) .r-card {
            animation-delay: .20s;
        }

        .col-card:nth-child(5) .r-card {
            animation-delay: .25s;
        }

        .col-card:nth-child(6) .r-card {
            animation-delay: .30s;
        }

        /* ========== RESPONSIVE ========== */
        @@media (max-width: 768px) {
            #mainSlider .carousel-item img {
                height: 280px;
            }

            .carousel-caption {
                left: 5%;
            }

            .filter-bar {
                flex-direction: column;
                align-items: stretch;
            }

                .filter-bar input, .filter-bar select {
                    width: 100%;
                }

            .section-header {
                margin-bottom: 24px;
            }
        }
    </style>
</head>
<body>

    <!-- ===== NAV ===== -->
    <nav class="top-nav">
        <div class="container d-flex align-items-center justify-content-between">
            <a class="brand" href="#">Dine<span>Rush</span></a>
            <div class="d-flex gap-3 align-items-center">
                <a href="#" class="text-white-50 text-decoration-none" style="font-size:.85rem;">
                    <i class="bi bi-heart me-1"></i>Favourites
                </a>
                <a href="#" class="text-white-50 text-decoration-none" style="font-size:.85rem;">
                    <i class="bi bi-bag me-1"></i>Cart
                </a>
            </div>
        </div>
    </nav>

    <!-- ===== SLIDER ===== -->
    <div class="slider-wrap">
        <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-indicators">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    <button type="button" data-bs-target="#mainSlider"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")"></button>
                }
            </div>

            <div class="carousel-inner">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    var s = Model.Sliders[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")"
                         data-bs-interval="@(s.SliderMovingTimer * 1000)">
                        <img src="@("/images/SliderRegistration/" + s.SliderName)" class="w-100">
                        <div class="carousel-caption">
                            <span class="label">Featured</span>
                            <h2>@s.HeadingSlider</h2>
                            <p>@s.DescriptionSlider</p>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button"
                    data-bs-target="#mainSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button"
                    data-bs-target="#mainSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>

    <!-- ===== RESTAURANTS SECTION ===== -->
    <div class="container" style="margin-top: 64px; padding-bottom: 40px;">

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-end mb-4 gap-3">
            <div class="section-header" style="margin-bottom:0;">
                <span class="eyebrow">Explore</span>
                <h3>Our Restaurants</h3>
            </div>

            <div class="filter-bar">
                <div class="search-wrap">
                    <i class="bi bi-search"></i>
                    <input type="text" id="restaurantSearch" placeholder="Search restaurant...">
                </div>
                <select id="typeFilter">
                    <option value="all">All Types</option>
                    @foreach (var type in Model.Customers.Select(x => x.Type).Distinct())
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
        </div>

        <div class="row g-3" id="restaurantGrid">
            @foreach (var c in Model.Customers)
            {
                <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2 col-card">
                    <a href="javascript:void(0)"
                       class="text-decoration-none restaurant-link"
                       data-id="@c.CustomerId"
                       data-name="@c.Customer.ToLower()"
                       data-type="@c.Type.ToLower()">
                        <div class="r-card">

                            <div class="r-card__img-wrap">
                                <img src="@("/images/VendorRegistration/" + c.ImagePath)"
                                     alt="@c.Customer">

                                <span class="r-badge @(c.DeliveryCharges == 0 ? "free" : "paid")">
                                    <i class="bi bi-truck-front-fill"></i>
                                    @(c.DeliveryCharges == 0 ? "Free Delivery" : $"Rs. {c.DeliveryCharges}")
                                </span>

                                <div class="r-rating-img">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= c.Rating ? "bi-star-fill" : "bi-star-fill empty")"></i>
                                    }
                                </div>
                            </div>

                            <div class="r-card__body">
                                <h6>@c.Customer</h6>
                                <div class="r-meta">
                                    <span class="r-type-badge">@c.Type</span>
                                    <span class="r-time">
                                        <i class="bi bi-clock"></i> @c.Timing
                                    </span>
                                </div>
                            </div>

                        </div>
                    </a>
                </div>
            }
        </div>

        <!-- Empty state (hidden by default) -->
        <div class="empty-state d-none" id="emptyState">
            <i class="bi bi-shop d-block"></i>
            <p>No restaurants match your search.</p>
        </div>

    </div>

    <!-- ===== FOOTER ===== -->
    <div class="footer-strip">
        © 2024 <span>DineRush</span> — All rights reserved.
    </div>

    <!-- ===== CLOSED MODAL ===== -->
    <div class="modal fade" id="closedModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-white">
                    <h5 class="modal-title">Restaurant Not Available</h5>
                </div>
                <div class="modal-body" id="closedModalBody">
                    This restaurant is currently closed.
                </div>
                <div class="modal-footer justify-content-center border-0">
                    <button class="btn-close-modal" data-bs-dismiss="modal">Got it</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // ---- Restaurant click & server validation ----
        document.querySelectorAll('.restaurant-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();
                const restaurantId = this.dataset.id;

                fetch('/Restaurant/CheckRestaurantValidation', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ RestaurantId: restaurantId })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.statusId === 0) {
                        document.getElementById('closedModalBody').innerHTML = data.message;
                        new bootstrap.Modal(document.getElementById('closedModal')).show();
                    } else {
                        window.location.href = `/RestaurantDetail/Index/${restaurantId}`;
                    }
                })
                .catch(() => alert('Server error. Please try again.'));
            });
        });

        // ---- Search & Filter ----
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("restaurantSearch");
            const typeFilter  = document.getElementById("typeFilter");
            const cols        = document.querySelectorAll(".col-card");
            const emptyState  = document.getElementById("emptyState");

            function filter() {
                const q    = searchInput.value.toLowerCase().trim();
                const type = typeFilter.value.toLowerCase();
                let visible = 0;

                cols.forEach(col => {
                    const link = col.querySelector('.restaurant-link');
                    const name = link.dataset.name;
                    const t    = link.dataset.type;
                    const show = name.includes(q) && (type === 'all' || t === type);
                    col.style.display = show ? '' : 'none';
                    if (show) visible++;
                });

                emptyState.classList.toggle('d-none', visible > 0);
            }

            searchInput.addEventListener("keyup", filter);
            typeFilter.addEventListener("change", filter);
        });
    </script>

</body>
</html>
