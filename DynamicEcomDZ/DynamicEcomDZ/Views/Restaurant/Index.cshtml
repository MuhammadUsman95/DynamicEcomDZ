@model SliderViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Restaurants</title>
    <link rel="icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <style>
        :root {
            --red: #e84545;
            --red-dark: #c0392b;
            --dark: #1a1a2e;
            --bg: #f6f7fb;
            --white: #ffffff;
            --accent: #ff6b35;
            --shadow: 0 4px 24px rgba(0,0,0,.10);
            --radius: 14px;
            --tr: all .35s cubic-bezier(.4,0,.2,1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--bg);
            font-family: 'Poppins', sans-serif;
            color: var(--dark);
        }

        /* ===== HEADER ===== */
        header {
            background: var(--dark);
            box-shadow: 0 2px 20px rgba(0,0,0,.35);
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .header-inner {
            width: 92%;
            max-width: 1200px;
            margin: auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 68px;
        }

        .header-logo img {
            height: 46px;
            width: auto;
            object-fit: contain;
            transition: var(--tr);
        }

            .header-logo img:hover {
                transform: scale(1.04);
            }

        .btn-about {
            display: inline-flex;
            align-items: center;
            gap: 7px;
            background: var(--red);
            color: #fff;
            font-weight: 600;
            font-size: .88rem;
            padding: 9px 22px;
            border-radius: 9px;
            text-decoration: none;
            transition: var(--tr);
            border: none;
        }

            .btn-about:hover {
                background: var(--red-dark);
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 6px 18px rgba(232,69,69,.35);
            }

        /* ===== SLIDER ===== */
        #mainSlider {
            width: 100%;
            overflow: hidden;
            position: relative;
        }

            #mainSlider .carousel-inner img {
                width: 100%;
                height: 500px;
                object-fit: cover;
                filter: brightness(50%);
                transition: filter .5s ease, transform 6s ease;
            }

            /* Ken Burns subtle zoom on active */
            #mainSlider .carousel-item.active img {
                transform: scale(1.05);
            }

            /* Gradient overlay */
            #mainSlider .carousel-item::after {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient( 120deg, rgba(26,26,46,.80) 0%, rgba(26,26,46,.45) 45%, rgba(0,0,0,.10) 100% );
                z-index: 1;
            }

            #mainSlider:hover .carousel-inner img {
                filter: brightness(60%);
            }

        /* ===== CAPTION ===== */
        .carousel-caption {
            position: absolute;
            top: 50%;
            left: 7%;
            right: auto;
            transform: translateY(-50%);
            text-align: left;
            z-index: 10;
            padding: 0;
            max-width: 520px;
        }

        /* Animated elements — hidden by default */
        .cap-eyebrow {
            display: inline-flex;
            align-items: center;
            gap: 7px;
            background: var(--accent);
            color: #fff;
            font-size: .7rem;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
            padding: 5px 16px;
            border-radius: 30px;
            margin-bottom: 18px;
            opacity: 0;
        }

        .cap-heading {
            font-size: 3rem;
            font-weight: 900;
            color: #fff;
            line-height: 1.1;
            margin-bottom: 16px;
            text-shadow: 0 4px 24px rgba(0,0,0,.5);
            opacity: 0;
        }

            .cap-heading em {
                font-style: normal;
                color: var(--accent);
            }

        .cap-desc {
            font-size: .98rem;
            color: rgba(255,255,255,.82);
            line-height: 1.75;
            margin-bottom: 28px;
            text-shadow: 0 2px 8px rgba(0,0,0,.35);
            opacity: 0;
        }

        .cap-cta {
            display: inline-flex;
            align-items: center;
            gap: 9px;
            background: var(--red);
            color: #fff;
            padding: 13px 30px;
            border-radius: 50px;
            font-weight: 700;
            font-size: .9rem;
            text-decoration: none;
            box-shadow: 0 8px 24px rgba(232,69,69,.4);
            transition: var(--tr);
            opacity: 0;
            cursor: pointer;
        }

            .cap-cta:hover {
                background: var(--red-dark);
                color: #fff;
                transform: translateY(-3px);
                box-shadow: 0 14px 32px rgba(232,69,69,.5);
            }

        /* ===== ANIMATION KEYFRAMES ===== */
        @@keyframes capBadgeIn {
            from

        {
            opacity: 0;
            transform: scale(.75);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }
        @@keyframes capHeadIn {
            from

        {
            opacity: 0;
            transform: translateX(-60px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }
        @@keyframes capDescIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
        @@keyframes capCtaIn {
            from

        {
            opacity: 0;
            transform: scale(.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }

        /* Trigger animations on active slide */
        #mainSlider .carousel-item.active .cap-eyebrow {
            animation: capBadgeIn .6s ease .1s forwards;
        }

        #mainSlider .carousel-item.active .cap-heading {
            animation: capHeadIn .7s ease .35s forwards;
        }

        #mainSlider .carousel-item.active .cap-desc {
            animation: capDescIn .7s ease .62s forwards;
        }

        #mainSlider .carousel-item.active .cap-cta {
            animation: capCtaIn .6s ease .92s forwards;
        }

        /* ===== SLIDER CONTROLS ===== */
        .carousel-control-prev,
        .carousel-control-next {
            width: 50px;
            height: 50px;
            background: rgba(255,255,255,.12);
            backdrop-filter: blur(8px);
            border-radius: 50%;
            top: 50%;
            bottom: auto;
            transform: translateY(-50%);
            margin: 0 22px;
            opacity: 0;
            border: 1.5px solid rgba(255,255,255,.22);
            transition: var(--tr);
        }

        #mainSlider:hover .carousel-control-prev,
        #mainSlider:hover .carousel-control-next {
            opacity: 1;
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background: var(--red);
            border-color: var(--red);
        }

        .carousel-indicators {
            margin-bottom: 24px;
            gap: 6px;
        }

            .carousel-indicators [data-bs-target] {
                width: 28px;
                height: 4px;
                border-radius: 4px;
                background: rgba(255,255,255,.4);
                border: none;
                margin: 0 3px;
                transition: var(--tr);
                padding: 0;
            }

            .carousel-indicators .active {
                width: 48px;
                background: var(--red);
            }

        /* Mobile Slider */
        @@media (max-width: 768px) {
            #mainSlider .carousel-inner img {
                height: 260px;
            }

            .carousel-caption {
                left: 20px;
                max-width: 80%;
            }

            .cap-heading {
                font-size: 1.6rem;
                margin-bottom: 10px;
            }

            .cap-desc {
                font-size: .8rem;
                margin-bottom: 16px;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            .cap-eyebrow {
                font-size: .62rem;
                margin-bottom: 10px;
            }

            .cap-cta {
                padding: 9px 20px;
                font-size: .8rem;
            }
        }

        @@media (max-width: 576px) {
            #mainSlider .carousel-inner img {
                height: 210px;
            }

            .cap-heading {
                font-size: 1.25rem;
            }

            .cap-desc {
                -webkit-line-clamp: 2;
            }
        }

        /* ===== RESTAURANTS ===== */
        .section-heading {
            font-weight: 800;
            font-size: 1.45rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .section-heading::after {
                content: '';
                flex: 1;
                height: 2px;
                background: linear-gradient(90deg, rgba(232,69,69,.3), transparent);
                margin-left: 8px;
            }

        .filter-input, .filter-select {
            border: 1.5px solid #e0e7f3;
            border-radius: 10px;
            font-size: .85rem;
            font-family: 'Poppins', sans-serif;
            padding: 8px 14px;
            background: #f8faff;
            transition: var(--tr);
        }

            .filter-input:focus, .filter-select:focus {
                border-color: var(--red);
                box-shadow: 0 0 0 3px rgba(232,69,69,.1);
                outline: none;
                background: #fff;
            }

        @@media (max-width: 768px) {
            .filter-wrap {
                flex-direction: column;
                width: 100%;
            }

            .filter-input, .filter-select {
                width: 100%;
            }
        }

        /* Restaurant Card */
        .customer-card {
            border-radius: var(--radius);
            border: 1px solid rgba(0,0,0,.05);
            box-shadow: var(--shadow);
            overflow: hidden;
            transition: transform .35s cubic-bezier(.34,1.56,.64,1), box-shadow .35s ease;
            background: var(--white);
        }

            .customer-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 48px rgba(232,69,69,.15);
            }

        .card-img-top {
            width: 100%;
            height: 16vh;
            object-fit: cover;
            transition: transform .5s ease;
        }

        .customer-card:hover .card-img-top {
            transform: scale(1.07);
        }

        .img-wrap {
            overflow: hidden;
            position: relative;
        }

        .delivery-badge {
            position: absolute;
            top: 8px;
            left: 8px;
            font-size: 10px;
            font-weight: 700;
            padding: 4px 9px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            gap: 4px;
            letter-spacing: .3px;
            box-shadow: 0 2px 8px rgba(0,0,0,.2);
        }

        .star-filled {
            color: #ffc107;
        }

        .star-empty {
            color: #ddd;
        }

        /* ===== MODAL ===== */
        .modal-content {
            border-radius: 16px;
            border: none;
            box-shadow: 0 20px 60px rgba(0,0,0,.2);
        }

        /* ===== FOOTER ===== */
        footer {
            background: var(--dark);
            color: rgba(255,255,255,.55);
            margin-top: 60px;
        }

        .footer-body {
            display: grid;
            grid-template-columns: 1.6fr 1fr;
            gap: 40px;
            padding: 48px 40px 36px;
            border-bottom: 1px solid rgba(255,255,255,.07);
        }

        @@media (max-width: 768px) {
            .footer-body {
                grid-template-columns: 1fr;
                gap: 24px;
                padding: 32px 24px;
            }
        }

        .footer-brand-desc {
            font-size: .84rem;
            line-height: 1.75;
            margin-top: 12px;
            color: rgba(255,255,255,.4);
        }

        .footer-socials {
            display: flex;
            gap: 9px;
            margin-top: 18px;
        }

            .footer-socials a {
                width: 36px;
                height: 36px;
                border-radius: 9px;
                background: rgba(255,255,255,.07);
                color: rgba(255,255,255,.6);
                display: flex;
                align-items: center;
                justify-content: center;
                text-decoration: none;
                font-size: 1rem;
                transition: var(--tr);
            }

                .footer-socials a:hover {
                    background: var(--red);
                    color: #fff;
                    transform: translateY(-2px);
                }

        .footer-col h6 {
            font-size: .78rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .12em;
            color: #fff;
            margin-bottom: 14px;
        }

        .footer-col a {
            color: rgba(255,255,255,.45);
            text-decoration: none;
            font-size: .84rem;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color .2s;
        }

            .footer-col a:hover {
                color: var(--red);
            }

        .footer-bottom {
            text-align: center;
            padding: 16px 24px;
            font-size: .78rem;
            color: rgba(255,255,255,.25);
        }
    </style>
</head>
<body>

    <!-- ====== HEADER ====== -->
    <header>
        <div class="header-inner">
            <a asp-controller="Home" asp-action="Index" class="header-logo">
                <img src="@Url.Content("~/images/logo.png")" alt="Logo" />
            </a>
            <nav>
                <a asp-controller="Restaurant" asp-action="AboutUs" class="btn-about">
                    <i class="bi bi-info-circle"></i> About Us
                </a>
            </nav>
        </div>
    </header>

    <!-- ====== SLIDER ====== -->
    <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Sliders.Count; i++)
            {
                <button type="button"
                        data-bs-target="#mainSlider"
                        data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"></button>
            }
        </div>

        <div class="carousel-inner">
            @for (int i = 0; i < Model.Sliders.Count; i++)
            {
                var s = Model.Sliders[i];
                <div class="carousel-item @(i == 0 ? "active" : "")"
                     data-bs-interval="@(s.SliderMovingTimer * 1000)">

                    <img src="@("/images/SliderRegistration/" + s.SliderName)" alt="@s.HeadingSlider" />

                    <div class="carousel-caption">
                        <div class="cap-eyebrow">
                            <i class="bi bi-stars"></i> @s.HeadingSlider
                        </div>
                        <h2 class="cap-heading">@s.DescriptionSlider</h2>
                        @* <p class="cap-desc">@s.DescriptionSlider</p> *@
                        @* <a href="#restaurants" class="cap-cta">
                            <i class="bi bi-bag-heart-fill"></i> Order Now
                        </a> *@
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>


    <!-- ====== RESTAURANTS ====== -->
    <div class="container mt-5" id="restaurants">

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
            <h3 class="section-heading">
                <i class="bi bi-shop" style="color:var(--red);"></i> Our Restaurants
            </h3>
            <div class="d-flex gap-2 filter-wrap">
                <input type="text" id="restaurantSearch" class="filter-input"
                       placeholder="🔍 Search restaurant..." style="width:210px">
                <select id="typeFilter" class="filter-select" style="width:150px">
                    <option value="all">All Types</option>
                    @foreach (var type in Model.Customers.Select(x => x.Type).Distinct())
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
        </div>

        <div class="row justify-content-center" id="restaurantGrid">
            @foreach (var c in Model.Customers)
            {
                <div class="col-6 col-sm-6 col-md-3 col-lg-2 mb-4 rest-col">
                    <a href="javascript:void(0)" class="text-decoration-none restaurant-link" data-id="@c.CustomerId">
                        <div class="card customer-card h-100">
                            <div class="img-wrap">
                                <img src="@("/images/VendorRegistration/" + c.ImagePath)"
                                     class="card-img-top" alt="@c.Customer" />
                                <span class="badge @(c.DeliveryCharges == 0 ? "bg-success" : "bg-warning text-dark") delivery-badge">
                                    <i class="bi bi-truck"></i>
                                    @(c.DeliveryCharges == 0 ? "Free Delivery" : $"Rs. {c.DeliveryCharges}")
                                </span>
                            </div>
                            <div class="card-body text-center" style="padding:12px 10px 10px;">
                                <h6 class="fw-bold mb-1" style="font-size:.88rem;">@c.Customer</h6>
                                <span class="badge" style="background:var(--dark);font-size:.72rem;">@c.Type</span>
                                <div class="small text-muted mt-1" style="font-size:10.5px;">
                                    <i class="bi bi-clock"></i> @c.Timing
                                </div>
                                <div class="mt-2" style="font-size:18px;">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="@(i <= c.Rating ? "star-filled" : "star-empty")">★</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>


    <!-- CLOSED MODAL -->
    <div class="modal fade" id="closedModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center">
                <div class="modal-header bg-danger text-white border-0" style="border-radius:16px 16px 0 0;">
                    <h5 class="modal-title w-100">Restaurant Not Available</h5>
                </div>
                <div class="modal-body py-4" id="closedModalBody">
                    This restaurant is currently closed.
                </div>
                <div class="modal-footer justify-content-center border-0 pb-4">
                    <button class="btn btn-danger px-5" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>


    <!-- ====== FOOTER ====== -->
    <footer>
        <div class="footer-body">
            <div>
                <a href="/" style="display:inline-flex;align-items:center;text-decoration:none;">
                    <img src="@("/images/logo.png")" alt="Logo" style="height:46px;width:auto;object-fit:contain;" />
                </a>
                <p class="footer-brand-desc">Everything You Need In B17 — All In One Place</p>
                <div class="footer-socials">
                    <a href="https://www.facebook.com/share/1Buimi6joN/" target="_blank"><i class="bi bi-facebook"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                    <a href="https://api.whatsapp.com/send?phone=923002222662" target="_blank"><i class="bi bi-whatsapp"></i></a>
                </div>
            </div>
            <div class="footer-col">
                <h6>Contact</h6>
                <a href="tel:+923002222662">
                    <i class="bi bi-telephone-fill" style="color:var(--red);"></i> +92-300-2222662
                </a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>Software Developed By: <span style="font-weight:700;color:rgba(255,255,255,.5);">UT Designer</span></p>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        /* ===== SLIDER ANIMATION RESET ON SLIDE CHANGE ===== */
        document.addEventListener("DOMContentLoaded", function () {
            const slider = document.getElementById('mainSlider');

            slider.addEventListener('slide.bs.carousel', function (e) {
                const incoming = e.relatedTarget;
                if (!incoming) return;
                const els = incoming.querySelectorAll('.cap-eyebrow, .cap-heading, .cap-desc, .cap-cta');
                els.forEach(el => {
                    el.style.animation = 'none';
                    el.style.opacity   = '0';
                    void el.offsetWidth; // force reflow
                    el.style.animation = '';
                });
            });
        });

        /* ===== RESTAURANT CLICK ===== */
        document.querySelectorAll('.restaurant-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();
                fetch('/Restaurant/CheckRestaurantValidation', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ RestaurantId: this.dataset.id })
                })
                .then(r => r.json())
                .then(data => {
                    if (data.statusId === 0) {
                        document.getElementById('closedModalBody').innerHTML = data.message;
                        new bootstrap.Modal(document.getElementById('closedModal')).show();
                    } else {
                        window.location.href = `/RestaurantDetail/Index/${this.dataset.id}`;
                    }
                })
                .catch(() => alert('Server error. Please try again.'));
            });
        });

        /* ===== FILTER ===== */
        document.addEventListener("DOMContentLoaded", function () {
            const search = document.getElementById("restaurantSearch");
            const filter = document.getElementById("typeFilter");
            const cols   = document.querySelectorAll(".rest-col");

            function run() {
                const q = search.value.toLowerCase();
                const t = filter.value.toLowerCase();
                cols.forEach(col => {
                    const name = col.querySelector("h6").innerText.toLowerCase();
                    const type = col.querySelector(".badge").innerText.toLowerCase();
                    col.style.display = name.includes(q) && (t === "all" || type.includes(t)) ? "block" : "none";
                });
            }
            search.addEventListener("keyup", run);
            filter.addEventListener("change", run);
        });
    </script>

</body>
</html>
