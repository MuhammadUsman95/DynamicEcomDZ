@model SliderViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Restaurants</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: #f6f7fb;
        }

        /* SLIDER */
        #mainSlider img {
            height: 420px;
            object-fit: cover;
            filter: brightness(75%);
        }

        /* CUSTOMER CARD */
        .customer-card {
            border-radius: 14px;
            transition: .3s;
        }

            .customer-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 25px rgba(0,0,0,.2);
            }

        .star-filled {
            color: #ffc107;
        }

        .star-empty {
            color: #ddd;
        }

        /* Mobile responsive styles */
        @@media (max-width: 768px) {
            #mainSlider

        {
            height: auto;
        }

        #mainSlider img {
            height: auto;
            min-height: 250px;
            width: 100%;
            object-fit: contain;
        }

        .carousel-caption {
            padding-bottom: 1rem;
        }

            .carousel-caption h2 {
                font-size: 1.5rem;
            }

            .carousel-caption p {
                font-size: 0.9rem;
                margin-bottom: 0;
            }

        }

        .card-img, .card-img-bottom, .card-img-top {
            width: 100%;
            height: 16vh;
        }
    </style>
</head>
<body>

    <!-- ================= SLIDER START ================= -->
    <div class="container mt-4">
        <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-inner">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    var s = Model.Sliders[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")"
                         data-bs-interval="@(s.SliderMovingTimer * 1000)">
                        <img src="@("/images/Slider/" + s.SilderName)" class="w-100">
                        <div class="carousel-caption text-start">
                            <h2>@s.HeadingSlider</h2>
                            <p>@s.DescriptionSlider</p>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button"
                    data-bs-target="#mainSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button"
                    data-bs-target="#mainSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
    <!-- ================= SLIDER END ================= -->
    <!-- ================= CUSTOMERS ================= -->
    <div class="container mt-5">
        <h3 class="text-center mb-4">Our Restaurants</h3>

        <div class="row justify-content-center">
            @foreach (var c in Model.Customers)
            {
                <div class="col-6 col-sm-6 col-md-3 col-lg-2 mb-4">
                    <a href="javascript:void(0)"
                       class="text-decoration-none restaurant-link"
                       data-id="@c.CustomerId">

                        <div class="card customer-card h-100">

                            <img src="@("/images/CustomerLogo/" + c.ImagePath)"
                                 class="card-img-top">

                            <div class="card-body text-center">
                                <h6 class="fw-bold">@c.Customer</h6>

                                <span class="badge bg-primary">@c.Type</span>

                                <div class="small text-muted mt-1">
                                    <i class="bi bi-clock"></i> @c.Timing
                                </div>
                                <div class="small mt-1 fw-semibold">
                                    <i class="bi bi-truck"></i>
                                    @if (c.DeliveryCharges == 0)
                                    {
                                        <span class="badge bg-success">Free Delivery</span>

                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Rs. @c.DeliveryCharges</span>
                                    }
                                </div>


                                <div class="mt-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="@(i <= c.Rating ? "star-filled" : "star-empty")">★</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- CLOSED MODAL -->
    <div class="modal fade" id="closedModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Restaurant Closed</h5>
                </div>
                <div class="modal-body">
                    This restaurant is currently closed.
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.querySelectorAll('.restaurant-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();

                const restaurantId = this.dataset.id;

                // 🔁 Server-side validation only
                fetch('/Restaurant/CheckRestaurantValidation', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        RestaurantId: restaurantId,
                    })
                })
                .then(res => res.json())
                .then(data => {

                    if (data.statusId === 0) {
                        // ❌ Not allowed (closed / blocked / any server rule)
                        document.querySelector('#closedModal .modal-title').innerText = 'Restaurant Not Available';
                        document.querySelector('#closedModal .modal-body').innerHTML = data.message;

                        new bootstrap.Modal(
                            document.getElementById('closedModal')
                        ).show();
                    }
                    else {
                        // ✅ Allowed → redirect
                        window.location.href = `/RestaurantDetail/Index/${restaurantId}`;
                    }

                })
                .catch(() => {
                    alert('Server error. Please try again.');
                });
            });
        });
    </script>

</body>
</html>