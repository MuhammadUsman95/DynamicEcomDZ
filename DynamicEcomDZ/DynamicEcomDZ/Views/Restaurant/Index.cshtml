    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Single Page Website</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f6f7fb;
        }

        /* ================= SLIDER ================= */
        #mainSlider {
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,.25);
        }

        .carousel-item {
            position: relative;
        }

            .carousel-item img {
                height: 420px;
                object-fit: cover;
                filter: brightness(75%);
            }

        .slider-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to right, rgba(0,0,0,.65), rgba(0,0,0,.15));
        }

        .carousel-caption {
            bottom: 30%;
            text-align: left;
            animation: fadeUp .8s ease-in-out;
        }

            .carousel-caption h2 {
                font-size: 38px;
                font-weight: 700;
                color: #fff;
            }

            .carousel-caption p {
                font-size: 16px;
                max-width: 500px;
                color: #eee;
            }



        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 45px;
            height: 45px;
            background-color: rgba(0,0,0,.5);
            border-radius: 50%;
        }

        .carousel-indicators [data-bs-target] {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: #fff;
            opacity: .6;
        }

        .carousel-indicators .active {
            opacity: 1;
        }

        /* ================= CUSTOMER CARDS ================= */
        .customer-card {
            border: none;
            border-radius: 14px;
            overflow: hidden;
            background: #fff;
            transition: all .25s ease;
        }

            .customer-card img {
                height: 170px;
                object-fit: cover;
            }

            .customer-card:hover {
                transform: translateY(-6px) scale(1.02);
                box-shadow: 0 12px 30px rgba(0,0,0,.18);
            }

            .customer-card .card-body {
                padding: 12px;
            }

            .customer-card h6 {
                font-size: 15px;
                margin-bottom: 6px;
            }

        /* ================= RATING ================= */
        .rating-stars {
            display: flex;
            justify-content: center;
        }

            .rating-stars span {
                font-size: 20px;
                margin: 0 2px;
            }

        .star-filled {
            color: #ffc107;
        }

        .star-empty {
            color: #d1d1d1;
        }
    </style>
</head>
<body>

    <div class="container mt-4">

        <!-- ================= SLIDER START ================= -->
        <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-indicators">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    <button type="button"
                            data-bs-target="#mainSlider"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")">
                    </button>
                }
            </div>

            <div class="carousel-inner">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    var item = Model.Sliders[i];
                    var interval = (item.SliderMovingTimer == 0 ? 5 : item.SliderMovingTimer) * 1000;

                    <div class="carousel-item @(i == 0 ? "active" : "")"
                         data-bs-interval="@interval">

                        <img src="@("/images/Slider/" + item.SilderName)"
                             class="d-block w-100"
                             alt="@item.SilderId">

                        <div class="slider-overlay"></div>

                        <!-- ✅ DYNAMIC HEADING & DESCRIPTION -->
                        <div class="carousel-caption">
                            <h2>@(string.IsNullOrEmpty(item.HeadingSlider) ? "" : item.HeadingSlider)</h2>
                            <p>@(string.IsNullOrEmpty(item.DescriptionSlider) ? "" : item.DescriptionSlider)</p>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button"
                    data-bs-target="#mainSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button"
                    data-bs-target="#mainSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>

        </div>
        <!-- ================= SLIDER END ================= -->

    </div>

    <!-- ================= CUSTOMERS START ================= -->
    <div class="container mt-5">
        <h3 class="text-center mb-4">Our Customers</h3>

