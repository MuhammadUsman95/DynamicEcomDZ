@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>About Us</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: #f6f7fb;
            color: #333;
            overflow-x: hidden;
        }

        /* ===== HEADER ===== */
        header {
            background: #1a1a2e;
            padding: 0;
            box-shadow: 0 2px 12px rgba(0,0,0,0.3);
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .header-inner {
            width: 92%;
            max-width: 1200px;
            margin: auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 68px;
        }

            .header-inner a.logo img {
                height: 48px;
                width: auto;
                object-fit: contain;
            }

        .btn-back {
            font-weight: 600;
            color: #fff;
            text-decoration: none;
            font-size: 15px;
            padding: 9px 22px;
            border-radius: 9px;
            background: #e84545;
            transition: all .2s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-back:hover {
                background: #c0392b;
                color: #fff;
            }

        /* ===== HERO ===== */
        .hero-section {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            padding: 90px 20px 80px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: -60px;
                right: -60px;
                width: 350px;
                height: 350px;
                background: radial-gradient(circle, rgba(232,69,69,0.18) 0%, transparent 70%);
                border-radius: 50%;
            }

            .hero-section::after {
                content: '';
                position: absolute;
                bottom: -80px;
                left: -40px;
                width: 280px;
                height: 280px;
                background: radial-gradient(circle, rgba(232,69,69,0.12) 0%, transparent 70%);
                border-radius: 50%;
            }

        .hero-badge {
            display: inline-block;
            background: rgba(232,69,69,0.15);
            border: 1px solid rgba(232,69,69,0.4);
            color: #e84545;
            font-size: 12px;
            font-weight: 600;
            letter-spacing: .12em;
            text-transform: uppercase;
            padding: 6px 18px;
            border-radius: 30px;
            margin-bottom: 20px;
        }

        .hero-section h1 {
            font-size: clamp(2rem, 5vw, 3.2rem);
            font-weight: 800;
            color: #fff;
            line-height: 1.2;
            margin-bottom: 18px;
        }

            .hero-section h1 span {
                color: #e84545;
            }

        .hero-section p {
            font-size: 1.05rem;
            color: rgba(255,255,255,0.65);
            max-width: 650px;
            margin: 0 auto 36px;
            line-height: 1.75;
        }

        .hero-stats {
            display: flex;
            justify-content: center;
            gap: 48px;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }

        .stat-item {
            text-align: center;
        }

            .stat-item .num {
                font-size: 2.2rem;
                font-weight: 800;
                color: #e84545;
                line-height: 1;
            }

            .stat-item .label {
                font-size: .78rem;
                color: rgba(255,255,255,0.5);
                text-transform: uppercase;
                letter-spacing: .08em;
                margin-top: 4px;
            }

        /* ===== SECTION COMMON ===== */
        .section-wrap {
            padding: 72px 0;
        }

        .section-label {
            font-size: .75rem;
            font-weight: 700;
            letter-spacing: .15em;
            text-transform: uppercase;
            color: #e84545;
            margin-bottom: 10px;
        }

        .section-title {
            font-size: clamp(1.5rem, 3vw, 2rem);
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 16px;
        }

        .section-text {
            font-size: .95rem;
            line-height: 1.8;
            color: #666;
            max-width: 600px;
        }

        /* ===== WHO WE ARE ===== */
        .who-img-wrap {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }

            .who-img-wrap img {
                width: 100%;
                height: 380px;
                object-fit: cover;
                transition: transform .4s;
            }

            .who-img-wrap:hover img {
                transform: scale(1.04);
            }

        .who-img-badge {
            position: absolute;
            bottom: 24px;
            left: 24px;
            background: #e84545;
            color: #fff;
            padding: 12px 20px;
            border-radius: 12px;
            font-weight: 700;
            font-size: .95rem;
            box-shadow: 0 8px 24px rgba(232,69,69,0.4);
        }

        /* ===== FEATURES ===== */
        .features-section {
            background: #fff;
        }

        .feature-card {
            background: #f6f7fb;
            border-radius: 16px;
            padding: 32px 24px;
            height: 100%;
            transition: .3s;
            border: 1.5px solid transparent;
            position: relative;
            overflow: hidden;
        }

            .feature-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: #e84545;
                transform: scaleX(0);
                transition: transform .3s;
            }

            .feature-card:hover {
                transform: translateY(-6px);
                border-color: rgba(232,69,69,0.15);
                background: #fff;
                box-shadow: 0 12px 32px rgba(0,0,0,0.08);
            }

                .feature-card:hover::before {
                    transform: scaleX(1);
                }

        .feature-icon {
            width: 54px;
            height: 54px;
            background: rgba(232,69,69,0.1);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            color: #e84545;
            margin-bottom: 18px;
        }

        .feature-card h4 {
            font-size: 1rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 10px;
        }

        .feature-card p {
            font-size: .85rem;
            color: #777;
            line-height: 1.7;
            margin: 0;
        }

        /* ===== MISSION ===== */
        .mission-section {
            background: #1a1a2e;
        }

            .mission-section .section-title {
                color: #fff;
            }

            .mission-section .section-text {
                color: rgba(255,255,255,0.6);
            }

            .mission-section .section-label {
                color: #e84545;
            }

        .mission-card {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: 16px;
            padding: 28px 24px;
            height: 100%;
            transition: .3s;
        }

            .mission-card:hover {
                background: rgba(232,69,69,0.1);
                border-color: rgba(232,69,69,0.3);
                transform: translateY(-4px);
            }

            .mission-card .icon {
                font-size: 2rem;
                margin-bottom: 14px;
            }

            .mission-card h5 {
                font-size: .95rem;
                font-weight: 700;
                color: #fff;
                margin-bottom: 8px;
            }

            .mission-card p {
                font-size: .83rem;
                color: rgba(255,255,255,0.5);
                line-height: 1.7;
                margin: 0;
            }

        /* ===== CONTACT ===== */
        .contact-section {
            background: #f6f7fb;
        }

        .contact-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px 32px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.07);
            height: 100%;
            transition: .3s;
            position: relative;
            overflow: hidden;
        }

            .contact-card::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #e84545, #ff7b54);
                transform: scaleX(0);
                transition: .3s;
            }

            .contact-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 16px 48px rgba(0,0,0,0.12);
            }

                .contact-card:hover::after {
                    transform: scaleX(1);
                }

        .contact-type-badge {
            display: inline-block;
            background: rgba(232,69,69,0.1);
            color: #e84545;
            font-size: .72rem;
            font-weight: 700;
            letter-spacing: .1em;
            text-transform: uppercase;
            padding: 5px 14px;
            border-radius: 20px;
            margin-bottom: 20px;
        }

        .contact-card h3 {
            font-size: 1.3rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 8px;
        }

        .contact-card .sub {
            font-size: .85rem;
            color: #999;
            margin-bottom: 28px;
            line-height: 1.5;
        }

        .contact-info-row {
            display: flex;
            align-items: flex-start;
            gap: 14px;
            margin-bottom: 16px;
        }

        .ci-icon {
            width: 40px;
            height: 40px;
            min-width: 40px;
            background: rgba(232,69,69,0.08);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #e84545;
            font-size: 1rem;
        }

        .ci-content .ci-label {
            font-size: .7rem;
            font-weight: 600;
            color: #bbb;
            text-transform: uppercase;
            letter-spacing: .08em;
        }

        .ci-content .ci-value {
            font-size: .9rem;
            font-weight: 600;
            color: #1a1a2e;
            margin-top: 1px;
        }

            .ci-content .ci-value a {
                color: #1a1a2e;
                text-decoration: none;
                transition: color .2s;
            }

                .ci-content .ci-value a:hover {
                    color: #e84545;
                }

        .contact-divider {
            border: none;
            border-top: 1px solid #f0f0f0;
            margin: 24px 0;
        }

        .social-row {
            display: flex;
            gap: 10px;
        }

        .social-btn {
            width: 38px;
            height: 38px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: .95rem;
            text-decoration: none;
            transition: .2s;
        }

            .social-btn.fb {
                background: #f0f4ff;
                color: #3b5998;
            }

                .social-btn.fb:hover {
                    background: #3b5998;
                    color: #fff;
                }

            .social-btn.wa {
                background: #f0fff6;
                color: #25d366;
            }

                .social-btn.wa:hover {
                    background: #25d366;
                    color: #fff;
                }

            .social-btn.ig {
                background: #fff0f6;
                color: #e1306c;
            }

                .social-btn.ig:hover {
                    background: #e1306c;
                    color: #fff;
                }

        /* ===== CTA ===== */
        .cta-section {
            background: linear-gradient(135deg, #e84545 0%, #c0392b 100%);
            padding: 72px 20px;
            text-align: center;
        }

            .cta-section h2 {
                font-size: clamp(1.6rem, 4vw, 2.2rem);
                font-weight: 800;
                color: #fff;
                margin-bottom: 14px;
            }

            .cta-section p {
                color: rgba(255,255,255,0.75);
                font-size: .95rem;
                margin-bottom: 32px;
            }

        .cta-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #fff;
            color: #e84545;
            font-weight: 700;
            font-size: .9rem;
            padding: 13px 32px;
            border-radius: 50px;
            text-decoration: none;
            box-shadow: 0 8px 24px rgba(0,0,0,0.15);
            transition: .2s;
        }

            .cta-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 14px 36px rgba(0,0,0,0.2);
                color: #e84545;
            }

        /* ===== FOOTER ===== */
        footer {
            background: #1a1a2e;
            color: rgba(255,255,255,.6);
            margin-top: 0;
        }

        .footer-body {
            display: grid;
            grid-template-columns: 1.6fr 1fr 1fr;
            gap: 40px;
            padding: 48px 40px 36px;
            border-bottom: 1px solid rgba(255,255,255,.07);
        }
        @@media (max-width: 768px) {
            .footer-body

        {
            grid-template-columns: 1fr;
            gap: 24px;
            padding: 32px 24px;
        }

        }

        .footer-brand-desc {
            font-size: .84rem;
            line-height: 1.75;
            margin-top: 12px;
            color: rgba(255,255,255,.45);
        }

        .footer-socials {
            display: flex;
            gap: 9px;
            margin-top: 18px;
        }

            .footer-socials a {
                width: 34px;
                height: 34px;
                border-radius: 8px;
                background: rgba(255,255,255,.07);
                color: rgba(255,255,255,.6);
                display: flex;
                align-items: center;
                justify-content: center;
                text-decoration: none;
                font-size: .95rem;
                transition: .2s;
            }

                .footer-socials a:hover {
                    background: #e84545;
                    color: #fff;
                }

        .footer-col h6 {
            font-size: .78rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .1em;
            color: #fff;
            margin-bottom: 14px;
        }

        .footer-col ul {
            list-style: none;
        }

            .footer-col ul li {
                margin-bottom: 9px;
            }

                .footer-col ul li a {
                    color: rgba(255,255,255,.45);
                    text-decoration: none;
                    font-size: .84rem;
                    transition: color .2s;
                }

                    .footer-col ul li a:hover {
                        color: #e84545;
                    }

        .footer-bottom {
            text-align: center;
            padding: 16px 24px;
            font-size: .78rem;
            color: rgba(255,255,255,.25);
        }

        /* Animations */
        .fade-up {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity .6s ease, transform .6s ease;
        }

            .fade-up.visible {
                opacity: 1;
                transform: none;
            }
    </style>
</head>
<body>

    <!-- ====== HEADER ====== -->
    <header>
        <div class="header-inner">
            <a asp-controller="Home" asp-action="Index" class="logo" style="text-decoration:none;">
                <img src="@Url.Content("~/images/logo.png")" alt="Logo" />
            </a>
            <nav>
                <a asp-controller="Restaurant" asp-action="Index" asp-route-id="1" class="btn-back">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </nav>
        </div>
    </header>


    <!-- ====== HERO ====== -->
    <section class="hero-section">
        <div class="hero-badge">✦ Our Story</div>
        <h1>We Are More Than Just<br><span>A Food Platform</span></h1>
        <p>Your one-stop digital marketplace for Restaurants, Home Chefs, Daily Needs, Real Estate, Classifieds, and Health Services — all in one place.</p>

        <div class="hero-stats">
            <div class="stat-item">
                <div class="num">50+</div>
                <div class="label">Restaurants</div>
            </div>
            <div class="stat-item">
                <div class="num">30+</div>
                <div class="label">Home Chefs</div>
            </div>
            <div class="stat-item">
                <div class="num">100+</div>
                <div class="label">Happy Customers</div>
            </div>
@*             <div class="stat-item">
                <div class="num">10+</div>
                <div class="label">Cities</div>
            </div> *@
        </div>
    </section>


    <!-- ====== WHO WE ARE ====== -->
    <div class="section-wrap">
        <div class="container">
            <div class="row align-items-center g-5 fade-up">
                <div class="col-lg-6">
                    <div class="who-img-wrap">
                        <img src="@Url.Content("~/images/about-team.jpg")" alt="Our Team"
                             onerror="this.src='https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=700&q=80'">
                        <div class="who-img-badge">
                            <i class="bi bi-patch-check-fill me-2"></i> Trusted Since 2022
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="section-label">Who We Are</div>
                    <h2 class="section-title">A Modern Digital Marketplace Built for You</h2>
                    <p class="section-text mb-4">
                        We are a modern digital marketplace designed to connect customers with trusted local service providers.
                        Our platform simplifies everyday life by bringing multiple services into one convenient place.
                    </p>
                    <p class="section-text">
                        Whether you're searching for delicious food from top restaurants, home-cooked meals from talented home chefs,
                        property listings, healthcare services, or classified ads — we make the process easy, secure, and reliable.
                    </p>
                    <div class="d-flex gap-3 mt-4 flex-wrap">
                        <div class="d-flex align-items-center gap-2" style="font-size:.85rem; font-weight:600; color:#1a1a2e;">
                            <i class="bi bi-shield-fill-check text-danger"></i> 100% Verified Vendors
                        </div>
                        <div class="d-flex align-items-center gap-2" style="font-size:.85rem; font-weight:600; color:#1a1a2e;">
                            <i class="bi bi-clock-fill text-danger"></i> Fast Delivery
                        </div>
                        <div class="d-flex align-items-center gap-2" style="font-size:.85rem; font-weight:600; color:#1a1a2e;">
                            <i class="bi bi-star-fill text-danger"></i> Top Rated
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- ====== WHY CHOOSE US ====== -->
    <div class="section-wrap features-section">
        <div class="container">
            <div class="text-center mb-5 fade-up">
                <div class="section-label">Why Choose Us</div>
                <h2 class="section-title">What Makes Us Different</h2>
            </div>
            <div class="row g-4">
                <div class="col-6 col-md-4 col-lg-2 fade-up">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi bi-patch-check"></i></div>
                        <h4>Trusted Listings</h4>
                        <p>All listings are verified for safety and reliability.</p>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-lg-2 fade-up">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi bi-compass"></i></div>
                        <h4>Easy Navigation</h4>
                        <p>User-friendly design for a smooth experience.</p>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-lg-2 fade-up">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi bi-grid-3x3-gap"></i></div>
                        <h4>Multi Category</h4>
                        <p>Restaurants, properties, daily needs & more.</p>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-lg-2 fade-up">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi bi-headset"></i></div>
                        <h4>24/7 Support</h4>
                        <p>We are here whenever you need assistance.</p>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-lg-2 fade-up">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi bi-truck"></i></div>
                        <h4>Fast Delivery</h4>
                        <p>Quick and reliable delivery to your doorstep.</p>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-lg-2 fade-up">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi bi-shield-lock"></i></div>
                        <h4>Secure Payments</h4>
                        <p>100% safe & encrypted transactions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- ====== MISSION ====== -->
    <div class="section-wrap mission-section">
        <div class="container">
            <div class="text-center mb-5 fade-up">
                <div class="section-label">Our Mission</div>
                <h2 class="section-title">What We Stand For</h2>
                <p style="color:rgba(255,255,255,0.5); max-width:560px; margin:0 auto; font-size:.9rem; line-height:1.75;">
                    To provide a secure, user-friendly, and trusted environment where users can explore, connect, and grow.
                </p>
            </div>
            <div class="row g-4">
                <div class="col-sm-6 col-lg-3 fade-up">
                    <div class="mission-card">
                        <div class="icon">🎯</div>
                        <h5>Quality First</h5>
                        <p>We prioritize delivering top-quality services and products to every customer.</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 fade-up">
                    <div class="mission-card">
                        <div class="icon">🤝</div>
                        <h5>Community Growth</h5>
                        <p>Empowering local businesses while offering customers the best value.</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 fade-up">
                    <div class="mission-card">
                        <div class="icon">🔒</div>
                        <h5>Trust & Safety</h5>
                        <p>Your privacy and security are our top priorities, always.</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 fade-up">
                    <div class="mission-card">
                        <div class="icon">🚀</div>
                        <h5>Constant Innovation</h5>
                        <p>We continuously improve to bring you the best digital experience.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- ====== CONTACT ====== -->
    <div class="section-wrap contact-section">
        <div class="container">
            <div class="text-center mb-5 fade-up">
                <div class="section-label">Get In Touch</div>
                <h2 class="section-title">Contact Us</h2>
                <p style="color:#888; max-width:500px; margin:0 auto; font-size:.9rem; line-height:1.75;">
                    Have a question or want to partner with us? Reach out to our Restaurant or Home Chef team below.
                </p>
            </div>

            <div class="row g-4">

                <!-- Restaurant Contact -->
                <div class="col-md-6 fade-up">
                    <div class="contact-card">
                        <div class="contact-type-badge"><i class="bi bi-shop me-1"></i> Restaurant</div>
                        <h3>Restaurant Inquiries</h3>
                        <p class="sub">Want to list your restaurant or have a query about restaurant orders and services?</p>

                        <div class="contact-info-row">
