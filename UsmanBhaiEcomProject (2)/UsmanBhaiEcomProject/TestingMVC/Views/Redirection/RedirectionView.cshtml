@model List<TestingMVC.Models.RedirectionTAB>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Pages</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        /* 🔴 BACKGROUND — SAME */
        body {
            background: linear-gradient(rgb(145 145 145 / 60%), rgb(61 61 61 / 60%)), url(/images/premium_photo-1661883237884-263e8de8869b.jpg);
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            height: 100vh;
            overflow: hidden;
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.6);
            z-index: 999;
            animation: fadeIn .4s ease forwards;
        }

        .modal-dialog-advanced {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 760px;
            max-width: 95vw;
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 22px 44px rgba(0,0,0,.38), 0 10px 20px rgba(0,0,0,.22);
            z-index: 1000;
            max-height: 90vh;
            display: flex;
            flex-direction: column;
            animation: slideUp .5s ease forwards;
        }

        .modal-body-advanced {
            padding: 28px;
            overflow-y: auto;
        }

        /* 🟦 CARD WITH FULL IMAGE */
        .card-tile {
            position: relative;
            height: 200px;
            border-radius: 18px;
            overflow: hidden;
            text-decoration: none;
            display: block;
            box-shadow: 0 10px 22px rgba(0,0,0,.28);
            transition: transform .25s ease;
        }

            .card-tile:hover {
                transform: translateY(-4px);
            }

            /* 🖼️ FULL IMAGE */
            .card-tile img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* 📝 TEXT OVER IMAGE */
        .card-title {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 14px;
            font-size: 18px;
            font-weight: 600;
            color: #fff;
            text-align: center;
            background: linear-gradient(transparent, rgba(0,0,0,0.75));
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translate(-50%, -40%);
            }

            to {
                opacity: 1;
                transform: translate(-50%, -50%);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@media(max-width:768px) {
            .card-tile {
                height: 160px;
            }

            .card-title {
                font-size: 16px;
            }
        }
    </style>
</head>

<body>

    <div class="modal-overlay"></div>

    <div class="modal-dialog-advanced">
        <div class="modal-body-advanced">
            <div class="container-fluid p-0">
                <div class="row g-3">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <a href="@("/" + item.FormUrl)" class="card-tile">

                                @if (!string.IsNullOrEmpty(item.TabIcon))
                                {
                                    <img src="@("/images/Department/" + item.TabIcon)" alt="@item.Name" />
                                }
                                else
                                {
                                    <img src="https://cdn-icons-png.flaticon.com/512/545/545682.png" alt="@item.Name" />
                                }

                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
